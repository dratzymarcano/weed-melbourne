<style>
  .product-categories {
    background: var(--color-white);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 60px;
  }

  .content-text h2 {
    color: var(--color-primary);
    margin-bottom: 25px;
  }

  .content-text p {
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: 20px;
  }

  .categories-section {
    padding-top: 60px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .categories-section h3 {
    color: var(--color-primary);
    margin-bottom: 40px;
    font-size: 1.75rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 40px;
  }

  .category-card {
    background: var(--color-bg);
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .category-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .category-card span {
    font-size: 3.5rem;
    display: block;
    margin-bottom: 15px;
  }

  .category-card h4 {
    color: var(--color-primary);
    margin-bottom: 10px;
    font-size: 1.2rem;
  }

  .category-card p {
    color: var(--color-text);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  .cta-center {
    text-align: center;
    margin-top: 40px;
  }

  .image-placeholder {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: 12px;
    padding: 60px;
    text-align: center;
    color: var(--color-white);
    min-height: 350px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .image-placeholder span {
    font-size: 5rem;
    margin-bottom: 20px;
  }

  .image-placeholder p {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-white);
  }

  @media (max-width: 992px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .content-image {
      order: -1;
    }

    .image-placeholder {
      min-height: 250px;
      padding: 40px;
    }

    .image-placeholder span {
      font-size: 4rem;
    }
  }

  @media (max-width: 576px) {
    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
