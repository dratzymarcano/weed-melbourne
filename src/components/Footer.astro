---
const locations = [
  { href: "/sydney", label: "Sydney" },
  { href: "/melbourne", label: "Melbourne" },
  { href: "/brisbane", label: "Brisbane" },
  { href: "/perth", label: "Perth" },
  { href: "/adelaide", label: "Adelaide" },
  { href: "/canberra", label: "Canberra" },
  { href: "/darwin", label: "Darwin" },
  { href: "/hobart", label: "Hobart" },
  { href: "/gold-coast", label: "Gold Coast" },
  { href: "/sunshine-coast", label: "Sunshine Coast" },
  { href: "/newcastle", label: "Newcastle" },
  { href: "/wollongong", label: "Wollongong" },
  { href: "/central-coast", label: "Central Coast" },
];

const shopLinks = [
  { href: "/shop/flower", label: "Cannabis Flower" },
  { href: "/shop/edibles", label: "Edibles" },
  { href: "/shop/thc-gummies", label: "THC Gummies" },
  { href: "/shop/vapes", label: "Vapes" },
  { href: "/shop/concentrates", label: "Concentrates" },
  { href: "/shop/pre-rolls", label: "Pre-Rolls" },
  { href: "/shop/hash", label: "Hash" },
];

const supportLinks = [
  { href: "/how-it-works", label: "How It Works" },
  { href: "/shipping-and-delivery", label: "Shipping & Delivery" },
  { href: "/refunds", label: "Returns & Refunds" },
  { href: "/faq", label: "FAQs" },
  { href: "/resources", label: "Cannabis Resources" },
];

const legalLinks = [
  { href: "/terms-and-conditions", label: "Terms & Conditions" },
  { href: "/privacy-policy", label: "Privacy Policy" },
  { href: "/cookies-policy", label: "Cookie Policy" },
  { href: "/disclaimer", label: "Disclaimer" },
  { href: "/sitemap.xml", label: "Sitemap" },
];
---

<footer class="footer">
  <!-- Newsletter Section -->
  <div class="footer-newsletter">
    <div class="container">
      <div class="newsletter-inner">
        <div class="newsletter-content">
          <span class="newsletter-badge">Stay Updated</span>
          <h3>Get 15% Off Your First Order</h3>
          <p>Join 25,000+ Australians receiving exclusive deals, new strain alerts, and cannabis education.</p>
        </div>
        <form class="newsletter-form" action="#" method="POST">
          <div class="form-group">
            <input type="email" placeholder="Enter your email" required />
            <button type="submit">
              <span>Subscribe</span>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          <p class="form-note">No spam, unsubscribe anytime. By subscribing you agree to our Privacy Policy.</p>
        </form>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand Column -->
        <div class="footer-brand">
          <a href="/" class="footer-logo">
            <div class="logo-icon">
              <svg width="40" height="40" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="1.5"/>
                <path d="M16 8C16 8 12 12 12 16C12 20 16 24 16 24C16 24 20 20 20 16C20 12 16 8 16 8Z" fill="currentColor"/>
                <circle cx="16" cy="16" r="3" fill="#1a1a1a"/>
              </svg>
            </div>
            <div class="logo-text">
              <span class="logo-name">Mullaways</span>
              <span class="logo-tagline">Medical Cannabis</span>
            </div>
          </a>
          <p class="brand-description">Australia's most trusted online cannabis dispensary. Premium products, discreet delivery, and expert support since 2024.</p>
          
          <!-- Trust Indicators -->
          <div class="trust-badges">
            <div class="trust-badge">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
              <span>Secure Checkout</span>
            </div>
            <div class="trust-badge">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 6L9 17l-5-5"/>
              </svg>
              <span>Lab Tested</span>
            </div>
            <div class="trust-badge">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <rect x="1" y="3" width="15" height="13" rx="2"/><path d="M16 8h4l3 3v5a2 2 0 0 1-2 2h-1"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
              <span>Discreet Delivery</span>
            </div>
          </div>
        </div>

        <!-- Shop Column -->
        <div class="footer-col">
          <h4 class="footer-heading">Shop</h4>
          <ul class="footer-links">
            {shopLinks.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <!-- Support Column -->
        <div class="footer-col">
          <h4 class="footer-heading">Support</h4>
          <ul class="footer-links">
            {supportLinks.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <!-- Locations Column -->
        <div class="footer-col footer-col-locations">
          <h4 class="footer-heading">Delivery Areas</h4>
          <ul class="footer-links footer-links-grid">
            {locations.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
          <a href="/locations" class="view-all-link">
            View all locations
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <!-- Contact Column -->
        <div class="footer-col">
          <h4 class="footer-heading">Get In Touch</h4>
          <div class="contact-cards">
            <a href="mailto:hello@mullawaysmedicalcannabis.com.au" class="contact-card">
              <div class="contact-card-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="2" y="4" width="20" height="16" rx="2"/>
                  <path d="M22 6L12 13L2 6"/>
                </svg>
              </div>
              <div class="contact-card-text">
                <span class="contact-label">Email Us</span>
                <span class="contact-value">hello@mullawaysmedicalcannabis.com.au</span>
              </div>
            </a>
            <a href="tel:1800268265" class="contact-card">
              <div class="contact-card-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                </svg>
              </div>
              <div class="contact-card-text">
                <span class="contact-label">Call Us</span>
                <span class="contact-value">1800 BOTANICAL</span>
              </div>
            </a>
          </div>
          <div class="support-hours">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <span>Support: Mon-Fri 9am-6pm AEST</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-inner">
        <div class="footer-legal">
          <p class="copyright">© 2026 Mullaways Medical Cannabis Pty Ltd. All rights reserved. ABN 12 345 678 901</p>
          <div class="legal-links">
            {legalLinks.map((link, index) => (
              <>
                <a href={link.href}>{link.label}</a>
                {index < legalLinks.length - 1 && <span class="separator">·</span>}
              </>
            ))}
          </div>
        </div>
        <div class="footer-compliance">
          <div class="age-badge">
            <span class="age-number">18+</span>
            <span class="age-text">Adults Only</span>
          </div>
        </div>
      </div>
      <p class="footer-disclaimer">
        Products are intended for adults aged 18 years and older. Cannabis remains a controlled substance in Australia. 
        This website does not provide medical advice. Please consult with a healthcare professional before using any cannabis products. 
        Consume responsibly and in accordance with Australian law.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, #0f0f0f 0%, #1a1a1a 100%);
    color: #ffffff;
    position: relative;
  }

  /* Newsletter Section */
  .footer-newsletter {
    background: linear-gradient(135deg, rgba(139, 168, 136, 0.15) 0%, rgba(139, 168, 136, 0.05) 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding: var(--space-3xl) 0;
  }

  .newsletter-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .newsletter-badge {
    display: inline-block;
    background: rgba(139, 168, 136, 0.2);
    color: var(--color-sage);
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-sm);
  }

  .newsletter-content h3 {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0 0 var(--space-sm);
    color: #ffffff;
  }

  .newsletter-content p {
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .newsletter-form .form-group {
    display: flex;
    gap: 0;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    padding: 6px;
    transition: all var(--transition-base);
  }

  .newsletter-form .form-group:focus-within {
    border-color: var(--color-sage);
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-form input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 14px 18px;
    color: #ffffff;
    font-size: 0.95rem;
  }

  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .newsletter-form input:focus {
    outline: none;
  }

  .newsletter-form button {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    background: var(--color-sage);
    color: #1a1a1a;
    border: none;
    padding: 14px 24px;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .newsletter-form button:hover {
    background: #9dbc9a;
    transform: translateX(2px);
  }

  .form-note {
    margin: var(--space-sm) 0 0;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.4);
  }

  /* Main Footer */
  .footer-main {
    padding: var(--space-4xl) 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr 1.3fr;
    gap: var(--space-3xl);
  }

  /* Brand */
  .footer-brand {
    padding-right: var(--space-xl);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    transition: opacity var(--transition-fast);
  }

  .footer-logo:hover {
    opacity: 0.8;
  }

  .logo-icon {
    color: var(--color-sage);
  }

  .logo-name {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffffff;
    display: block;
    letter-spacing: -0.02em;
  }

  .logo-tagline {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
  }

  .brand-description {
    color: rgba(255, 255, 255, 0.55);
    font-size: 0.9rem;
    line-height: 1.7;
    margin: 0 0 var(--space-xl);
  }

  .trust-badges {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .trust-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
  }

  .trust-badge svg {
    color: var(--color-sage);
    opacity: 0.8;
  }

  /* Footer Columns */
  .footer-heading {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.35);
    margin-bottom: var(--space-lg);
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
  }

  .footer-links a:hover {
    color: #ffffff;
    transform: translateX(4px);
  }

  /* Locations Grid */
  .footer-col-locations {
    grid-column: span 1;
  }

  .footer-links-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px 16px;
  }

  .footer-links-grid a {
    font-size: 0.85rem;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--color-sage);
    font-size: 0.85rem;
    font-weight: 500;
    margin-top: var(--space-md);
    transition: all var(--transition-fast);
  }

  .view-all-link:hover {
    color: #9dbc9a;
    transform: translateX(4px);
  }

  /* Contact Cards */
  .contact-cards {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .contact-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    padding: 14px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .contact-card:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(139, 168, 136, 0.3);
    transform: translateY(-2px);
  }

  .contact-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(139, 168, 136, 0.15);
    border-radius: var(--radius-sm);
    color: var(--color-sage);
    flex-shrink: 0;
  }

  .contact-card-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .contact-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
  }

  .contact-value {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.85);
    word-break: break-all;
  }

  .support-hours {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-top: var(--space-md);
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.8rem;
  }

  /* Footer Bottom */
  .footer-bottom {
    background: rgba(0, 0, 0, 0.3);
    padding: var(--space-xl) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .footer-bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xl);
    margin-bottom: var(--space-lg);
  }

  .footer-legal {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .copyright {
    color: rgba(255, 255, 255, 0.35);
    font-size: 0.85rem;
    margin: 0;
  }

  .legal-links {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-xs);
  }

  .legal-links a {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
    transition: color var(--transition-fast);
  }

  .legal-links a:hover {
    color: var(--color-sage);
  }

  .separator {
    color: rgba(255, 255, 255, 0.2);
  }

  .age-badge {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 10px 16px;
    border-radius: var(--radius-md);
  }

  .age-number {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-sage);
  }

  .age-text {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-disclaimer {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.75rem;
    line-height: 1.7;
    margin: 0;
    padding-top: var(--space-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr 1.5fr;
      gap: var(--space-2xl);
    }

    .footer-col-locations {
      grid-column: span 2;
    }

    .footer-links-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .newsletter-inner {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      text-align: center;
    }

    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-2xl);
    }

    .footer-brand {
      grid-column: span 2;
      padding-right: 0;
      text-align: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .trust-badges {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer-col-locations {
      grid-column: span 2;
    }

    .footer-links-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 600px) {
    .footer-newsletter {
      padding: var(--space-2xl) 0;
    }

    .newsletter-content h3 {
      font-size: 1.4rem;
    }

    .newsletter-form .form-group {
      flex-direction: column;
    }

    .newsletter-form button {
      width: 100%;
      justify-content: center;
    }

    .footer-main {
      padding: var(--space-2xl) 0;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer-brand {
      grid-column: span 1;
    }

    .footer-col-locations {
      grid-column: span 1;
    }

    .footer-links-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom-inner {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal {
      align-items: center;
    }

    .legal-links {
      justify-content: center;
    }
  }
</style>
