<style>
  .main-cta {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }

  .main-cta::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(76, 175, 80, 0.15) 0%, transparent 70%);
    border-radius: 50%;
  }

  .main-cta::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -5%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
    border-radius: 50%;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-tagline {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
    margin-bottom: 15px;
  }

  .cta-content h2 {
    color: var(--color-white);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 20px;
  }

  .cta-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.15rem;
    line-height: 1.7;
    margin-bottom: 35px;
  }

  .cta-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 25px;
  }

  .btn-outline-light {
    display: inline-block;
    padding: 14px 30px;
    border: 2px solid var(--color-white);
    color: var(--color-white);
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-outline-light:hover {
    background: var(--color-white);
    color: var(--color-primary);
  }

  .cta-note {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .main-cta {
      padding: 60px 0;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons .btn,
    .cta-buttons .btn-outline-light {
      width: 100%;
      max-width: 280px;
    }

    .cta-description {
      font-size: 1rem;
    }
  }
</style>
