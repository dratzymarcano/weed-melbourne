---
interface Props {
	title: string;
	description?: string;
	schema?: object | object[];
	ogType?: string;
	ogImage?: string;
	noindex?: boolean;
}

const { 
	title, 
	description = "Mullaways Medical Cannabis - Australia's trusted online dispensary. Buy weed online with discreet Australia-wide delivery. Lab-tested medical cannabis products.", 
	schema,
	ogType = "website",
	ogImage = "https://mullawaysmedicalcannabis.com.au/og-default.png",
	noindex = false
} = Astro.props;

// Ensure canonical URL always has trailing slash for consistency
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://mullawaysmedicalcannabis.com.au');
if (!canonicalURL.pathname.endsWith('/')) canonicalURL.pathname += '/';

const defaultSchema = {
	"@context": "https://schema.org",
	"@type": "Organization",
	"name": "Mullaways Medical Cannabis",
	"url": "https://mullawaysmedicalcannabis.com.au",
	"logo": "https://mullawaysmedicalcannabis.com.au/logo.png",
	"description": "Australia's trusted online cannabis dispensary. Buy weed online with discreet delivery Australia-wide.",
	"address": {
		"@type": "PostalAddress",
		"addressLocality": "Mullaways",
		"addressRegion": "NSW",
		"addressCountry": "AU"
	},
	"contactPoint": {
		"@type": "ContactPoint",
		"contactType": "customer service",
		"areaServed": "AU"
	},
	"sameAs": [
		"https://www.instagram.com/mullawaysmedical",
		"https://www.facebook.com/mullawaysmedical",
		"https://x.com/mullawaysmed"
	]
};

const schemaData = schema || defaultSchema;
const schemaArray = Array.isArray(schemaData) ? schemaData : [schemaData];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={canonicalURL.href} />
		<meta name="generator" content={Astro.generator} />
		{noindex ? (
			<meta name="robots" content="noindex, nofollow" />
		) : (
			<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
		)}
		
		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={canonicalURL.href} />
		<meta property="og:site_name" content="Mullaways Medical Cannabis" />
		<meta property="og:locale" content="en_AU" />
		<meta property="og:image" content={ogImage} />
		<meta property="og:image:alt" content={title} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
		
		<!-- Geo Tags -->
		<meta name="geo.region" content="AU-NSW" />
		<meta name="geo.placename" content="Mullaways" />
		
		<!-- Fonts - Optimized Loading -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
		</noscript>
		
		<!-- Schema.org Structured Data -->
		{schemaArray.map((s) => (
			<script type="application/ld+json" set:html={JSON.stringify(s)} />
		))}
		
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<!-- Age Verification Modal -->
		<div class="age-gate" id="age-gate" aria-hidden="true">
			<div class="age-gate-backdrop"></div>
			<div class="age-gate-card" role="dialog" aria-modal="true" aria-labelledby="age-gate-title">
				<!-- Cannabis leaf decoration -->
				<div class="age-gate-decoration">
					<svg width="120" height="120" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M12 2C12 2 9.5 6 9.5 9C9.5 10.5 10.5 11.5 12 11.5C13.5 11.5 14.5 10.5 14.5 9C14.5 6 12 2 12 2Z" fill="currentColor" opacity="0.15"/>
						<path d="M6 8C6 8 3 10 3 13C3 15 5 17 7 16C8 15.5 8.5 14 8 12.5C7.5 10.5 6 8 6 8Z" fill="currentColor" opacity="0.15"/>
						<path d="M18 8C18 8 21 10 21 13C21 15 19 17 17 16C16 15.5 15.5 14 16 12.5C16.5 10.5 18 8 18 8Z" fill="currentColor" opacity="0.15"/>
						<path d="M4 14C4 14 2 17 3 20C4 22 6.5 22 8 20.5C9 19.5 9 17.5 8 16C7 14 4 14 4 14Z" fill="currentColor" opacity="0.15"/>
						<path d="M20 14C20 14 22 17 21 20C20 22 17.5 22 16 20.5C15 19.5 15 17.5 16 16C17 14 20 14 20 14Z" fill="currentColor" opacity="0.15"/>
						<path d="M12 22V12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" opacity="0.2"/>
					</svg>
				</div>
				
				<!-- Badge -->
				<div class="age-gate-badge">
					<span class="age-gate-badge-icon">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
							<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
						</svg>
					</span>
					<span>18+ Adults Only</span>
				</div>
				
				<!-- Content -->
				<h2 id="age-gate-title" class="age-gate-title">Welcome to Mullaways</h2>
				<p class="age-gate-subtitle">Australia's Trusted Medical Cannabis Dispensary</p>
				<p class="age-gate-desc">This website contains products intended for adults aged 18 years and older. By entering, you confirm that you meet the legal age requirement.</p>
				
				<!-- Actions -->
				<div class="age-gate-actions">
					<button class="age-gate-btn age-gate-btn-confirm" id="age-confirm-btn">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
							<polyline points="20 6 9 17 4 12"/>
						</svg>
						<span>Yes, I'm 18 or Older</span>
					</button>
					<a class="age-gate-btn age-gate-btn-leave" href="https://www.google.com" rel="noopener noreferrer">
						<span>No, Take Me Back</span>
					</a>
				</div>
				
				<!-- Footer note -->
				<div class="age-gate-footer">
					<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
						<path d="M7 11V7a5 5 0 0 1 10 0v4"/>
					</svg>
					<span>Your preference is stored locally and remembered</span>
				</div>
			</div>
		</div>

		<!-- Cookie Notice -->
		<div class="cookie-banner" id="cookie-banner" role="region" aria-label="Cookie notice" aria-hidden="true">
			<div class="cookie-banner-inner">
				<div class="cookie-icon">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="1.5"/>
						<circle cx="8" cy="9" r="1.5" fill="currentColor"/>
						<circle cx="15" cy="8" r="1" fill="currentColor"/>
						<circle cx="10" cy="14" r="1" fill="currentColor"/>
						<circle cx="16" cy="13" r="1.5" fill="currentColor"/>
						<circle cx="13" cy="17" r="1" fill="currentColor"/>
					</svg>
				</div>
				<div class="cookie-content">
					<p class="cookie-title">We value your privacy</p>
					<p class="cookie-text">We use cookies to enhance your browsing experience, serve personalised content, and analyse our traffic. By clicking "Accept", you consent to our use of cookies.</p>
				</div>
				<div class="cookie-actions">
					<a class="cookie-link" href="/cookies-policy/">Cookies Policy</a>
					<button class="cookie-btn cookie-btn-accept" id="cookie-accept-btn">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
							<polyline points="20 6 9 17 4 12"/>
						</svg>
						<span>Accept All</span>
					</button>
				</div>
			</div>
		</div>

		<script>
			const ageGate = document.getElementById('age-gate');
			const ageConfirmBtn = document.getElementById('age-confirm-btn');
			const cookieBanner = document.getElementById('cookie-banner');
			const cookieAcceptBtn = document.getElementById('cookie-accept-btn');

			const AGE_KEY = 'ageVerified';
			const COOKIE_KEY = 'cookiesAccepted';

			function showAgeGate() {
				if (!ageGate) return;
				ageGate.classList.add('is-visible');
				ageGate.setAttribute('aria-hidden', 'false');
				document.body.classList.add('no-scroll');
			}

			function hideAgeGate() {
				if (!ageGate) return;
				ageGate.classList.remove('is-visible');
				ageGate.setAttribute('aria-hidden', 'true');
				document.body.classList.remove('no-scroll');
			}

			function showCookieBanner() {
				if (!cookieBanner) return;
				cookieBanner.classList.add('is-visible');
				cookieBanner.setAttribute('aria-hidden', 'false');
			}

			function hideCookieBanner() {
				if (!cookieBanner) return;
				cookieBanner.classList.remove('is-visible');
				cookieBanner.setAttribute('aria-hidden', 'true');
			}

			const ageVerified = localStorage.getItem(AGE_KEY) === 'true';
			const cookiesAccepted = localStorage.getItem(COOKIE_KEY) === 'true';

			if (!ageVerified) {
				showAgeGate();
			} else if (!cookiesAccepted) {
				showCookieBanner();
			}

			ageConfirmBtn?.addEventListener('click', () => {
				localStorage.setItem(AGE_KEY, 'true');
				hideAgeGate();
				if (localStorage.getItem(COOKIE_KEY) !== 'true') {
					showCookieBanner();
				}
			});

			cookieAcceptBtn?.addEventListener('click', () => {
				localStorage.setItem(COOKIE_KEY, 'true');
				hideCookieBanner();
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		/* Australian-Inspired Color Palette */
		--color-eucalyptus: #2D5A4A;
		--color-eucalyptus-light: #3D7A64;
		--color-eucalyptus-dark: #1A3D32;
		--color-sage: #8BA888;
		--color-terracotta: #C4704B;
		--color-terracotta-light: #D4896A;
		--color-sand: #E8DED1;
		--color-sand-light: #F5F1EB;
		--color-charcoal: #1C1C1C;
		--color-charcoal-light: #2D2D2D;
		--color-ocean: #4A8B9C;
		--color-ocean-light: #6BA3B2;
		
		/* Semantic Colors */
		--color-primary: var(--color-eucalyptus);
		--color-primary-dark: var(--color-eucalyptus-dark);
		--color-primary-light: var(--color-eucalyptus-light);
