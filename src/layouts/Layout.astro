		--space-md: 16px;
		--space-lg: 24px;
		--space-xl: 32px;
		--space-2xl: 48px;
		--space-3xl: 64px;
		--space-4xl: 96px;
		
		/* Layout */
		--max-width: 1280px;
		--max-width-narrow: 720px;
		--header-height: 72px;
		
		/* Borders & Shadows */
		--radius-sm: 6px;
		--radius-md: 12px;
		--radius-lg: 20px;
		--radius-xl: 28px;
		--radius-full: 9999px;
		--shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
		--shadow-md: 0 4px 12px rgba(0, 0, 0, 0.06);
		--shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.08);
		--shadow-xl: 0 16px 48px rgba(0, 0, 0, 0.1);
		
		/* Transitions */
		--transition-fast: 150ms ease;
		--transition-base: 250ms ease;
		--transition-slow: 400ms ease;
	}

	/* Font fallback to prevent FOIT */
	@font-face {
		font-family: 'Inter';
		font-display: swap;
	}
	
	@font-face {
		font-family: 'Playfair Display';
		font-display: swap;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		overflow-x: hidden;
	}

	body {
		font-family: var(--font-primary);
		font-size: 16px;
		line-height: 1.7;
		color: var(--color-text);
		background-color: var(--color-bg);
		font-weight: 400;
		letter-spacing: -0.01em;
		overflow-x: hidden;
	}

	body.no-scroll {
		overflow: hidden;
	}

	a {
		text-decoration: none;
		color: inherit;
		transition: color var(--transition-fast);
	}

	a:hover {
		color: var(--color-accent);
	}

	img {
		max-width: 100%;
		height: auto;
		display: block;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-display);
		font-weight: 600;
		line-height: 1.2;
		margin-bottom: var(--space-md);
		color: var(--color-text);
		letter-spacing: -0.02em;
	}

	h1 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 700;
	}

	h2 {
		font-size: clamp(1.75rem, 4vw, 2.75rem);
	}

	h3 {
		font-size: clamp(1.25rem, 2.5vw, 1.5rem);
		font-family: var(--font-primary);
		font-weight: 600;
	}

	.age-gate {
		position: fixed;
		inset: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.4s ease, visibility 0.4s ease;
		z-index: 9999;
		padding: var(--space-lg);
	}

	.age-gate-backdrop {
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(29, 61, 50, 0.95) 0%, rgba(28, 28, 28, 0.98) 100%);
		backdrop-filter: blur(12px);
	}

	.age-gate.is-visible {
		opacity: 1;
		visibility: visible;
	}

	.age-gate.is-visible .age-gate-card {
		transform: scale(1) translateY(0);
		opacity: 1;
	}

	.age-gate-card {
		position: relative;
		max-width: 480px;
		width: 100%;
		background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
		border-radius: 24px;
		padding: 48px 40px 40px;
		box-shadow: 
			0 0 0 1px rgba(255, 255, 255, 0.1),
			0 25px 80px -12px rgba(0, 0, 0, 0.4),
			0 10px 30px -8px rgba(0, 0, 0, 0.3);
		text-align: center;
		transform: scale(0.9) translateY(20px);
		opacity: 0;
		transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), opacity 0.4s ease;
		overflow: hidden;
	}

	.age-gate-decoration {
		position: absolute;
		top: -30px;
		left: 50%;
		transform: translateX(-50%);
		color: var(--color-primary);
		opacity: 0.08;
		pointer-events: none;
	}

	.age-gate-badge {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 10px 20px;
		border-radius: 100px;
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
		color: white;
		font-weight: 600;
		font-size: 0.85rem;
		letter-spacing: 0.02em;
		margin-bottom: 24px;
		box-shadow: 0 4px 15px -3px rgba(45, 90, 74, 0.4);
	}

	.age-gate-badge-icon {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.age-gate-title {
		font-family: var(--font-display);
		font-size: 1.85rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: 8px;
		letter-spacing: -0.02em;
	}

	.age-gate-subtitle {
		font-size: 0.95rem;
		color: var(--color-primary);
		font-weight: 500;
		margin-bottom: 20px;
	}

	.age-gate-desc {
		font-size: 0.95rem;
		line-height: 1.6;
		color: var(--color-text-light);
		margin-bottom: 32px;
		max-width: 360px;
		margin-left: auto;
		margin-right: auto;
	}

	.age-gate-actions {
		display: flex;
		flex-direction: column;
		gap: 12px;
		margin-bottom: 24px;
