---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found | Mullaways Medical Cannabis" description="The page you're looking for doesn't exist or has been moved. Browse our shop or return to the homepage." noindex={true}>
  <Header />

  <main>
    <section class="not-found-section">
      <div class="container">
        <div class="not-found-content">
          <div class="not-found-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6c0 0-4 4-4 8s4 6 4 6 4-2 4-6-4-8-4-8z"/>
              <path d="M12 6c0 0 4 4 4 8s-4 6-4 6"/>
            </svg>
          </div>
          <h1>404</h1>
          <p class="not-found-subtitle">Page Not Found</p>
          <p class="not-found-desc">The page you're looking for doesn't exist or has been moved. Try browsing our shop or head back to the homepage.</p>
          <div class="not-found-actions">
            <a href="/" class="btn btn-primary">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                <polyline points="9 22 9 12 15 12 15 22"/>
              </svg>
              Go Home
            </a>
            <a href="/shop/" class="btn btn-outline">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
              </svg>
              Browse Shop
            </a>
          </div>
          <div class="not-found-links">
            <p>Popular pages:</p>
            <ul>
              <li><a href="/shop/flower/">Cannabis Flower</a></li>
              <li><a href="/shop/edibles/">Edibles</a></li>
              <li><a href="/shop/thc-gummies/">THC Gummies</a></li>
              <li><a href="/shop/vapes/">Vapes</a></li>
              <li><a href="/shop/concentrates/">Concentrates</a></li>
              <li><a href="/blog/">Blog</a></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .not-found-section {
    padding: 8rem 0 6rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
  }

  .not-found-content {
    max-width: 560px;
    margin: 0 auto;
  }

  .not-found-icon {
    color: var(--color-primary, #4caf50);
    opacity: 0.3;
    margin-bottom: 1.5rem;
  }

  .not-found-content h1 {
    font-family: var(--font-heading, 'Playfair Display', serif);
    font-size: 6rem;
    font-weight: 700;
    color: var(--color-primary, #4caf50);
    line-height: 1;
    margin: 0 0 0.5rem;
  }

  .not-found-subtitle {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text, #1a1a2e);
    margin: 0 0 1rem;
  }

  .not-found-desc {
    color: var(--color-text-light, #555);
    line-height: 1.6;
    margin: 0 0 2rem;
  }

  .not-found-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: var(--color-sage, #8BA888);
    color: #1a1a1a;
  }

  .btn-primary:hover {
    background: #9dbc9a;
    transform: translateX(2px);
    box-shadow: 0 4px 14px rgba(139, 168, 136, 0.35);
  }

  .btn-outline {
    background: transparent;
    color: var(--color-primary, #2D5A4A);
    border: 1.5px solid rgba(139, 168, 136, 0.5);
  }

  .btn-outline:hover {
    background: var(--color-sage, #8BA888);
    color: #1a1a1a;
    border-color: var(--color-sage, #8BA888);
    transform: translateX(2px);
  }

  .not-found-links {
    border-top: 1px solid var(--color-border, #e5e5e5);
    padding-top: 1.5rem;
  }

  .not-found-links p {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-light, #555);
    margin: 0 0 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .not-found-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    justify-content: center;
  }

  .not-found-links a {
    color: var(--color-primary, #4caf50);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .not-found-links a:hover {
    color: var(--color-primary-dark, #388e3c);
    text-decoration: underline;
  }

  @media (max-width: 640px) {
    .not-found-section {
      padding: 6rem 0 4rem;
    }

    .not-found-content h1 {
      font-size: 4rem;
    }

    .not-found-subtitle {
      font-size: 1.25rem;
    }
  }
</style>
