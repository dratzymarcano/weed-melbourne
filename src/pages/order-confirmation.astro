    // Show Bitcoin discount if applicable
    const discountRow = document.getElementById('summary-discount-row');
    const discountEl = document.getElementById('summary-discount');
    if (order.discount && order.discount > 0 && discountRow && discountEl) {
      discountRow.style.display = 'flex';
      discountEl.textContent = `-$${order.discount.toFixed(2)}`;
    }

    document.getElementById('summary-shipping').textContent = `$${order.shipping.toFixed(2)}`;
    document.getElementById('summary-total').textContent = `$${order.total.toFixed(2)}`;

    const paymentLabels = { bitcoin: 'Bitcoin', bank: 'Bank Transfer', paysafecard: 'Paysafecard' };
    document.getElementById('summary-payment').textContent = paymentLabels[order.payment] || order.payment;

    // Copy buttons
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        let text = btn.dataset.copy;
        // Handle dynamic copy targets
        if (!text && btn.dataset.copyId) {
          const el = document.getElementById(btn.dataset.copyId);
          if (el) {
            text = el.dataset.rawAmount || el.textContent;
          }
        }
        if (!text) return;

        try {
          await navigator.clipboard.writeText(text);
          const originalHTML = btn.innerHTML;
          btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#059669" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
          btn.style.color = '#059669';
          setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.style.color = '';
          }, 2000);
        } catch (e) {
          // Fallback
          const el = document.createElement('textarea');
          el.value = text;
          document.body.appendChild(el);
          el.select();
          document.execCommand('copy');
          document.body.removeChild(el);
        }
      });
    });

    // Print button
    document.getElementById('print-order-btn')?.addEventListener('click', () => {
      window.print();
    });

    // Download Order Summary as text file
    document.getElementById('download-order-btn')?.addEventListener('click', () => {
      const order = JSON.parse(localStorage.getItem('lastOrder') || 'null');
      if (!order) return;

      const date = new Date(order.date).toLocaleDateString('en-AU', {
        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',
        hour: '2-digit', minute: '2-digit'
      });

      let deliveryLabel = order.shippingMethod === 'express'
        ? 'Express Delivery (1–2 business days)'
        : 'Standard Delivery (2–5 business days)';

      let lines = [
        '═══════════════════════════════════════════════════',
        '         MULLAWAYS MEDICAL CANNABIS',
        '              ORDER CONFIRMATION',
        '═══════════════════════════════════════════════════',
        '',
        `Order Reference:  ${order.ref}`,
        `Date:             ${date}`,
        '',
        '───────────────────────────────────────────────────',
        '  DELIVERY DETAILS',
        '───────────────────────────────────────────────────',
        `Name:      ${order.customer.firstName} ${order.customer.lastName}`,
        `Email:     ${order.customer.email}`,
        `Phone:     ${order.customer.phone || ''}`,
        `Address:   ${order.customer.address}`,
        `           ${order.customer.city}, ${order.customer.state} ${order.customer.postcode}`,
        `Delivery:  ${deliveryLabel}`,
        '',
        '───────────────────────────────────────────────────',
        '  ORDER ITEMS',
        '───────────────────────────────────────────────────',
      ];

      (order.items || []).forEach(item => {
        const itemTotal = (item.price * item.quantity).toFixed(2);
        lines.push(`${item.name}  x${item.quantity}  $${itemTotal}`);
        if (item.selectedWeight) lines.push(`  Weight: ${item.selectedWeight}`);
      });

      lines.push('');
      lines.push('───────────────────────────────────────────────────');
      lines.push(`  Subtotal:          $${order.subtotal.toFixed(2)}`);
      if (order.discount > 0) {
        lines.push(`  Bitcoin Discount:  -$${order.discount.toFixed(2)}`);
      }
      lines.push(`  Delivery:          $${order.shipping.toFixed(2)}`);
      lines.push(`  TOTAL:             $${order.total.toFixed(2)}`);
      lines.push('');
      let pmLabel = order.payment === 'bitcoin' ? 'Bitcoin'
        : order.payment === 'bank' ? 'Bank Transfer' : 'Paysafecard';
      lines.push(`  Payment Method:    ${pmLabel}`);
      lines.push('');
      lines.push('═══════════════════════════════════════════════════');
      lines.push('  Contact: hello@mullawaysmedicalcannabis.com.au');
      lines.push('  Website: mullawaysmedicalcannabis.com.au');
      lines.push('═══════════════════════════════════════════════════');

      const text = lines.join('\n');
      const blob = new Blob([text], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `order-${order.ref}.txt`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    });

  })();
</script>
