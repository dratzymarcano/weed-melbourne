  // @ts-nocheck
  (function() {
    const loadingState = document.getElementById('loading-state');
    const noOrderState = document.getElementById('no-order-state');
    const orderState = document.getElementById('order-state');

    // Read order from localStorage
    const orderData = JSON.parse(localStorage.getItem('lastOrder') || 'null');

    if (!orderData || !orderData.ref) {
      if (loadingState) loadingState.style.display = 'none';
      if (noOrderState) noOrderState.style.display = 'block';
      return;
    }

    // Show the order
    if (loadingState) loadingState.style.display = 'none';
    if (orderState) orderState.style.display = 'block';

    const order = orderData;

    // Hero Section
    const heroRef = document.getElementById('hero-ref');
    const heroEmail = document.getElementById('hero-email');
    const heroTitle = document.getElementById('hero-title');
    const heroSubtitle = document.getElementById('hero-subtitle');
    const heroEmailNotice = document.getElementById('hero-email-notice');

    if (heroRef) heroRef.textContent = order.ref;
    if (heroEmail) heroEmail.textContent = order.customer.email;

    // Customize hero based on payment
    if (order.payment === 'paysafecard') {
      if (heroTitle) heroTitle.textContent = 'Payment Submitted!';
    } else if (order.payment === 'bank') {
      if (heroTitle) heroTitle.textContent = 'Order Placed — Complete Payment';
    } else if (order.payment === 'bitcoin') {
      if (heroTitle) heroTitle.textContent = 'Order Placed — Complete Payment';
    }

    // Payment Panels
    const bitcoinPanel = document.getElementById('payment-bitcoin');
    const bankPanel = document.getElementById('payment-bank');
    const pscPanel = document.getElementById('payment-paysafecard');

    if (order.payment === 'bitcoin') {
      if (bitcoinPanel) bitcoinPanel.style.display = 'block';
      const btcAddress = order.btcAddress || '';
      document.getElementById('btc-address').textContent = btcAddress;
      document.getElementById('btc-amount').textContent = `$${order.total.toFixed(2)} AUD`;
      document.getElementById('btc-ref').textContent = order.ref;

      // Set copy button data
      const copyBtn = document.getElementById('btc-copy-address');
      if (copyBtn) copyBtn.dataset.copy = btcAddress;

      // Generate QR code with the address (URL-encode the bitcoin: URI for wallet compatibility)
      const qrImg = document.getElementById('btc-qr-image');
      if (qrImg && btcAddress) {
        qrImg.src = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent('bitcoin:' + btcAddress)}`;
      }

      // ── Payment Timer (30 minutes) ──────────────────────────────
      const TIMER_DURATION = 30 * 60; // 30 minutes in seconds
      const orderTime = new Date(order.date).getTime();
      const timerBar = document.getElementById('btc-timer-bar');
      const timerCountdown = document.getElementById('btc-timer-countdown');
      const timerFill = document.getElementById('btc-timer-fill');

      function updateTimer() {
        const elapsed = Math.floor((Date.now() - orderTime) / 1000);
        const remaining = Math.max(0, TIMER_DURATION - elapsed);
        const minutes = Math.floor(remaining / 60);
        const seconds = remaining % 60;
        const pct = (remaining / TIMER_DURATION) * 100;

        if (timerCountdown) timerCountdown.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        if (timerFill) timerFill.style.width = `${pct}%`;

        if (remaining <= 0 && timerBar) {
          timerBar.classList.add('expired');
          if (timerCountdown) timerCountdown.textContent = 'Expired';
          return;
        }
        requestAnimationFrame(() => setTimeout(updateTimer, 1000));
      }
      updateTimer();

      // ── Blockchain Confirmation Polling ─────────────────────────
      const statusBar = document.getElementById('btc-status-bar');
      const statusDot = statusBar?.querySelector('.status-dot');
      const statusText = document.getElementById('btc-status-text');
      const confirmationsEl = document.getElementById('btc-confirmations');
      const confirmCount = document.getElementById('btc-confirm-count');

      let btcPollingActive = true;
      let currentOrderStatus = order.status || 'pending';

      async function checkBlockchain() {
        if (!btcAddress || !btcPollingActive) return;
        try {
          const res = await fetch(`/api/check-btc?address=${btcAddress}&order_ref=${order.ref}`);
          if (!res.ok) return;
          const data = await res.json();

          if (data.status === 'confirmed' && data.confirmations >= 2) {
            // Payment confirmed!
            if (statusDot) { statusDot.className = 'status-dot confirmed'; }
            if (statusText) statusText.textContent = 'Payment confirmed!';
            if (statusBar) statusBar.className = 'btc-status-bar confirmed';
            if (confirmationsEl) confirmationsEl.style.display = 'block';
            if (confirmCount) confirmCount.textContent = data.confirmations;

            // Update order in localStorage
            order.status = 'processing';
            localStorage.setItem('lastOrder', JSON.stringify(order));
            const history = JSON.parse(localStorage.getItem('orderHistory') || '[]');
            const idx = history.findIndex(o => o.ref === order.ref);
            if (idx !== -1) { history[idx].status = 'processing'; localStorage.setItem('orderHistory', JSON.stringify(history)); }

            // Update step timeline
            const stepPayment = document.getElementById('step-payment');
            if (stepPayment) {
              stepPayment.querySelector('.step-title').textContent = 'Payment Confirmed';
              stepPayment.querySelector('.step-desc').textContent = `${data.confirmations} blockchain confirmations received.`;
              stepPayment.classList.add('completed');
            }

            // Send order emails now that payment is confirmed (2+ confirmations)
            if (!order.emailsSent) {
              sendBtcOrderEmails(order);
            }

            btcPollingActive = false;
            return;
          } else if (data.status === 'detected' || (data.confirmations > 0 && data.confirmations < 2)) {
            // Transaction detected, awaiting confirmations
            if (statusDot) { statusDot.className = 'status-dot detected'; }
            if (statusText) statusText.textContent = 'Payment detected - awaiting confirmations...';
            if (statusBar) statusBar.className = 'btc-status-bar detected';
            if (confirmationsEl) confirmationsEl.style.display = 'block';
            if (confirmCount) confirmCount.textContent = data.confirmations || 0;
          }
        } catch (e) {
          console.log('Blockchain check failed:', e);
        }
      }

      // ── Send BTC Order Emails (after 2 confirmations) ────────
      async function sendBtcOrderEmails(order) {
        const itemsList = order.items.map(i =>
          `${i.name} x ${i.quantity} -- $${(i.price * i.quantity).toFixed(2)}`
        ).join('\n');

        const emailData = {
          to_email: order.customer.email,
          to_name: `${order.customer.firstName} ${order.customer.lastName}`,
          order_ref: order.ref,
          order_date: new Date(order.date).toLocaleDateString('en-AU', {
            weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
          }),
          items_list: itemsList,
          subtotal: `$${order.subtotal.toFixed(2)}`,
          discount: order.discount > 0
            ? `-$${order.discount.toFixed(2)} (Bitcoin 10% discount)`
            : '$0.00',
          shipping: `$${order.shipping.toFixed(2)}`,
          total: `$${order.total.toFixed(2)}`,
          payment_method: 'Bitcoin',
          payment_status: 'Payment confirmed on blockchain',
          payment_next_step: 'Your Bitcoin payment has been verified with 2+ blockchain confirmations. Your order is now being processed.',
          shipping_address: `${order.customer.address}, ${order.customer.city}, ${order.customer.state} ${order.customer.postcode}`,
          delivery_method: order.shippingMethod === 'express'
            ? 'Express (1-2 business days)'
            : 'Standard (2-5 business days)',
          customer_email: order.customer.email,
          customer_phone: order.customer.phone,
          btc_address: order.btcAddress || '',
          psc_pin: '',
        };

        try {
          const [custRes, adminRes] = await Promise.all([
            fetch('/api/send-email', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ type: 'order-customer', data: emailData }),
            }),
            fetch('/api/send-email', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ type: 'order-admin', data: emailData }),
            }),
          ]);

          if (custRes.ok) console.log('Customer confirmation email sent (BTC verified)');
          if (adminRes.ok) console.log('Admin notification email sent (BTC verified)');

          // Mark emails as sent
          order.emailsSent = true;
          localStorage.setItem('lastOrder', JSON.stringify(order));
          const hist = JSON.parse(localStorage.getItem('orderHistory') || '[]');
          const hIdx = hist.findIndex(o => o.ref === order.ref);
          if (hIdx !== -1) { hist[hIdx].emailsSent = true; localStorage.setItem('orderHistory', JSON.stringify(hist)); }
        } catch (e) {
          console.error('Failed to send BTC confirmation emails:', e);
        }
      }

      // Poll every 30 seconds
      checkBlockchain();
      const btcPollInterval = setInterval(() => {
        if (!btcPollingActive) { clearInterval(btcPollInterval); return; }
        checkBlockchain();
      }, 30000);
    } else if (order.payment === 'bank') {
      if (bankPanel) bankPanel.style.display = 'block';
