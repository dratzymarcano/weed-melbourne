<script>
  // @ts-nocheck
  (function() {
    const loadingState = document.getElementById('loading-state');
    const noOrderState = document.getElementById('no-order-state');
    const orderState = document.getElementById('order-state');

    // Read order from localStorage
    const orderData = JSON.parse(localStorage.getItem('lastOrder') || 'null');

    if (!orderData || !orderData.ref) {
      if (loadingState) loadingState.style.display = 'none';
      if (noOrderState) noOrderState.style.display = 'block';
      return;
    }

    // Show the order
    if (loadingState) loadingState.style.display = 'none';
    if (orderState) orderState.style.display = 'block';

    const order = orderData;

    // Hero Section
    const heroRef = document.getElementById('hero-ref');
    const heroEmail = document.getElementById('hero-email');
    const heroTitle = document.getElementById('hero-title');
    const heroSubtitle = document.getElementById('hero-subtitle');
    const heroEmailNotice = document.getElementById('hero-email-notice');

    if (heroRef) heroRef.textContent = order.ref;
    if (heroEmail) heroEmail.textContent = order.customer.email;

    // Customize hero based on payment
    if (order.payment === 'paysafecard') {
      if (heroTitle) heroTitle.textContent = 'Payment Submitted!';
    } else if (order.payment === 'bank') {
      if (heroTitle) heroTitle.textContent = 'Order Placed — Complete Payment';
    } else if (order.payment === 'bitcoin') {
      if (heroTitle) heroTitle.textContent = 'Order Placed — Complete Payment';
    }

    // Payment Panels
    const bitcoinPanel = document.getElementById('payment-bitcoin');
    const bankPanel = document.getElementById('payment-bank');
    const pscPanel = document.getElementById('payment-paysafecard');

    if (order.payment === 'bitcoin') {
      if (bitcoinPanel) bitcoinPanel.style.display = 'block';
      document.getElementById('btc-amount').textContent = `$${order.total.toFixed(2)} AUD`;
      document.getElementById('btc-ref').textContent = order.ref;
    } else if (order.payment === 'bank') {
      if (bankPanel) bankPanel.style.display = 'block';
      document.getElementById('bank-amount').textContent = `$${order.total.toFixed(2)} AUD`;
      document.getElementById('bank-ref').textContent = order.ref;
      // Store raw amount for copy
      const bankAmountEl = document.getElementById('bank-amount');
      if (bankAmountEl) bankAmountEl.dataset.rawAmount = order.total.toFixed(2);
    } else if (order.payment === 'paysafecard') {
      if (pscPanel) pscPanel.style.display = 'block';
      const pinLast = document.getElementById('psc-pin-last');
      if (pinLast && order.pscPin) {
        pinLast.textContent = order.pscPin.slice(-4);
      }
    }

    // Payment step timeline customization
    const stepPayment = document.getElementById('step-payment');
    const stepPaymentTitle = document.getElementById('step-payment-title');
    const stepPaymentDesc = document.getElementById('step-payment-desc');

    if (order.payment === 'paysafecard' && stepPayment) {
      stepPaymentTitle.textContent = 'Verifying Paysafecard';
      stepPaymentDesc.textContent = 'Your PIN is being verified. Usually takes 1–5 minutes.';
    } else if (order.payment === 'bank') {
      stepPaymentTitle.textContent = 'Awaiting Bank Transfer';
      stepPaymentDesc.textContent = 'Transfer the exact amount using the details above.';
    } else if (order.payment === 'bitcoin') {
      stepPaymentTitle.textContent = 'Awaiting Bitcoin Payment';
      stepPaymentDesc.textContent = 'Send the exact amount to the BTC address shown above.';
    }

    // Customer Details
    document.getElementById('customer-name').textContent =
      `${order.customer.firstName} ${order.customer.lastName}`;
    document.getElementById('customer-address').textContent = order.customer.address;
    document.getElementById('customer-city-state').textContent =
      `${order.customer.city}, ${order.customer.state} ${order.customer.postcode}`;
    document.getElementById('customer-email-display').textContent = order.customer.email;
    document.getElementById('customer-phone').textContent = order.customer.phone;
    document.getElementById('customer-delivery').textContent =
      order.shippingMethod === 'express' ? 'Express Delivery (1–2 business days)' : 'Standard Delivery (2–5 business days)';

    // Order Summary
    document.getElementById('summary-ref').textContent = order.ref;
    document.getElementById('summary-date').textContent = new Date(order.date).toLocaleDateString('en-AU', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });

    const summaryItems = document.getElementById('summary-items');
    if (summaryItems) {
      summaryItems.innerHTML = order.items.map(item =>
        `<div class="summary-item">
          <span>${item.name} × ${item.quantity}</span>
          <strong>$${(item.price * item.quantity).toFixed(2)}</strong>
        </div>`
      ).join('');
    }

    document.getElementById('summary-subtotal').textContent = `$${order.subtotal.toFixed(2)}`;
    
    // Show Bitcoin discount if applicable
    const discountRow = document.getElementById('summary-discount-row');
    const discountEl = document.getElementById('summary-discount');
    if (order.discount && order.discount > 0 && discountRow && discountEl) {
      discountRow.style.display = 'flex';
      discountEl.textContent = `-$${order.discount.toFixed(2)}`;
    }

    document.getElementById('summary-shipping').textContent = `$${order.shipping.toFixed(2)}`;
    document.getElementById('summary-total').textContent = `$${order.total.toFixed(2)}`;

    const paymentLabels = {
      bitcoin: 'Bitcoin',
      bank: 'Bank Transfer',
      paysafecard: 'Paysafecard'
    };
    document.getElementById('summary-payment').textContent = paymentLabels[order.payment] || order.payment;

    // Copy buttons
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        let text = btn.dataset.copy;
        // Handle dynamic copy targets
        if (!text && btn.dataset.copyId) {
          const el = document.getElementById(btn.dataset.copyId);
          if (el) {
            text = el.dataset.rawAmount || el.textContent;
          }
        }
        if (!text) return;

        try {
          await navigator.clipboard.writeText(text);
          const originalHTML = btn.innerHTML;
          btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#059669" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>';
          btn.style.color = '#059669';
          setTimeout(() => {
            btn.innerHTML = originalHTML;
            btn.style.color = '';
          }, 2000);
        } catch (e) {
          // Fallback
          const el = document.createElement('textarea');
          el.value = text;
          document.body.appendChild(el);
          el.select();
          document.execCommand('copy');
          document.body.removeChild(el);
        }
      });
    });

    // Print button
    document.getElementById('print-order-btn')?.addEventListener('click', () => {
      window.print();
    });

  })();
</script>
