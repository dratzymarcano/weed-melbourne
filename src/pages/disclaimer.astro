---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "Disclaimer", "item": "https://mullawaysmedicalcannabis.com.au/disclaimer/" }
  ]
};
---

<Layout title="Cannabis Disclaimer Australia | Mullaways Medical Cannabis" description="Important legal information for buying weed online in Australia. Age restrictions, product information & responsible use guidelines." schema={breadcrumbSchema}>
  <Header />
  <main>
    <Breadcrumb items={[{label: 'Home', href: '/'}, {label: 'Disclaimer'}]} />
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <div class="abstract-shape shape-1"></div>
        <div class="abstract-shape shape-2"></div>
        <div class="dot-pattern"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <span class="hero-badge"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg> Important</span>
          <h1>Disclaimer</h1>
          <p>Important information about our services and your responsibilities.</p>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="content-section">
      <div class="container">
        <div class="content-wrapper">
          <!-- Important Notice -->
          <div class="notice-card">
            <div class="notice-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg></div>
            <div class="notice-content">
              <h2>Cannabis Products - For Adults Only</h2>
              <p>
                Products available through Mullaways Medical Cannabis are intended for adult use only (18+). These products may have various effects and should be used responsibly.
              </p>
            </div>
          </div>

          <!-- Disclaimer Sections -->
          <div class="disclaimer-grid">
            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2z"/><path d="M12 6c0 0-4 4-4 8s4 6 4 6 4-2 4-6-4-8-4-8z"/></svg></span>
                <h3>About Our Products</h3>
              </div>
              <div class="card-content">
                <p>
                  Mullaways Medical Cannabis offers premium cannabis products for adult customers. All our products are lab-tested for quality, potency, and purity to ensure the best possible experience.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M4.93 4.93l14.14 14.14"/></svg></span>
                <h3>Age Verification Required</h3>
              </div>
              <div class="card-content">
                <p>
                  You must be 18 years of age or older to access our website and purchase products. By using this website and placing an order, you confirm that you are of legal age.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg></span>
                <h3>Secure Payments</h3>
              </div>
              <div class="card-content">
                <p>
                  All payments are processed securely with bank-level encryption. We accept major credit cards and other secure payment methods. Billing descriptions are discreet for your privacy.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1"/></svg></span>
                <h3>Not Professional Advice</h3>
              </div>
              <div class="card-content">
                <p>
                  The information provided on this website is for general educational purposes only and should not be considered professional advice. We provide product information to help you make informed decisions.
                </p>
                <p>
                  If you have health concerns, please consult with a qualified healthcare provider. They can help determine what products may be appropriate for your needs.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2v17.5c0 1.4-1.1 2.5-2.5 2.5s-2.5-1.1-2.5-2.5V2"/><path d="M8.5 2h7"/><path d="M14.5 16h-5"/></svg></span>
                <h3>Product Information</h3>
              </div>
              <div class="card-content">
                <p>
                  While we strive to provide accurate product information, cannabinoid content may vary slightly between batches. Lab results are available for each product and should be reviewed before purchase. If you have questions about specific products, please contact our customer support team.
                </p>
                <p>
                  Individual responses to cannabis products vary. The effects described on this website are based on general research and patient reports and may not reflect your personal experience.
                </p>
              </div>
            </article>

            <article class="disclaimer-card highlight">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"/><circle cx="7" cy="17" r="2"/><path d="M9 17h6"/><circle cx="17" cy="17" r="2"/></svg></span>
                <h3>Driving and Operating Machinery</h3>
              </div>
              <div class="card-content">
                <p>
                  <strong>Do not drive or operate heavy machinery while under the influence of cannabis.</strong> THC-containing products can impair your ability to drive safely. In Australia, it is illegal to drive with any detectable amount of THC in your system.
                </p>
                <p>
                  Some medications may interact with cannabis. Please consult your healthcare provider about potential interactions with your current medications.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z"/><path d="M16 10H8a4 4 0 0 0-4 4v1h16v-1a4 4 0 0 0-4-4Z"/><path d="M12 15v7"/><path d="M8 22h8"/></svg></span>
                <h3>Pregnancy and Breastfeeding</h3>
              </div>
              <div class="card-content">
                <p>
                  Cannabis products should not be used during pregnancy or while breastfeeding. If you are pregnant, planning to become pregnant, or breastfeeding, please consult with your healthcare provider before using any cannabis products.
                </p>
              </div>
            </article>

            <article class="disclaimer-card">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/><line x1="4" y1="22" x2="4" y2="15"/></svg></span>
                <h3>Australian Customers Only</h3>
              </div>
              <div class="card-content">
                <p>
                  Our services are available to Australian residents only. We do not ship internationally and cannot process orders from outside Australia. All orders must be delivered to an Australian address.
                </p>
              </div>
            </article>

            <article class="disclaimer-card full-width">
              <div class="card-header">
                <span class="card-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m16 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"/><path d="m2 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"/><path d="M7 21h10"/><path d="M12 3v18"/><path d="M3 7h2c2 0 5-1 7-2 2 1 5 2 7 2h2"/></svg></span>
                <h3>Legal Compliance</h3>
              </div>
              <div class="card-content">
                <p>
                  By purchasing from Mullaways Medical Cannabis, you agree to use our products responsibly and in accordance with applicable laws. Reselling or distributing products to minors is strictly prohibited.
                </p>
                <p>
                  Cannabis laws vary by state and territory. It is your responsibility to understand and comply with the laws in your jurisdiction. We recommend staying informed about current regulations.
                </p>
              </div>
            </article>
          </div>

          <!-- Summary Box -->
          <div class="summary-box">
            <h3>In Summary</h3>
            <ul>
              <li>Must be 18 years or older to purchase</li>
              <li>Products for personal adult use only</li>
              <li>Do not drive while using THC products</li>
              <li>Australian residents only</li>
              <li>Use products responsibly</li>
              <li>Your privacy is protected</li>
            </ul>
          </div>

          <!-- Contact Section -->
          <div class="contact-section">
            <h3>Questions?</h3>
            <p>If you have any questions about this disclaimer or our products, please don't hesitate to contact us.</p>
            <div class="contact-buttons">
              <a href="/faq/" class="btn btn-primary">View FAQ</a>
              <a href="/contact/" class="btn btn-secondary">Contact Us</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 80px 0 80px;
    background: linear-gradient(135deg, var(--color-eucalyptus) 0%, #1e4035 100%);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .abstract-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--color-terracotta);
    top: -150px;
    right: -100px;
  }

  .shape-2 {
    width: 250px;
    height: 250px;
    background: var(--color-sage);
    bottom: -100px;
    left: -50px;
  }

  .dot-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 30px 30px;
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(255,255,255,0.15);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: white;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.25rem;
    color: rgba(255,255,255,0.9);
    line-height: 1.7;
  }

  /* Content Section */
  .content-section {
    padding: 4rem 0 6rem;
    background: var(--color-sand);
  }

  .content-wrapper {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Notice Card */
  .notice-card {
    display: flex;
    gap: 1.5rem;
    background: linear-gradient(135deg, var(--color-terracotta) 0%, #b3613e 100%);
    padding: 2rem;
    border-radius: 20px;
    margin-bottom: 3rem;
    color: white;
  }

  .notice-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }

  .notice-content h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: white;
  }

  .notice-content p {
    color: rgba(255,255,255,0.95);
    line-height: 1.7;
    margin: 0;
  }

  /* Disclaimer Grid */
  .disclaimer-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .disclaimer-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .disclaimer-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }

  .disclaimer-card.highlight {
    border: 2px solid var(--color-terracotta);
  }

  .disclaimer-card.full-width {
    grid-column: span 2;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-sand);
  }

  .card-icon {
    font-size: 1.75rem;
  }

  .card-header h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-eucalyptus);
    margin: 0;
  }

  .card-content p {
    color: #555;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .card-content p:last-child {
    margin-bottom: 0;
  }

  .card-content a {
    color: var(--color-eucalyptus);
    text-decoration: underline;
    font-weight: 500;
  }

  .card-content a:hover {
    color: var(--color-terracotta);
  }

  .card-content strong {
    color: var(--color-eucalyptus);
  }

  /* Summary Box */
  .summary-box {
    background: var(--color-eucalyptus);
    padding: 2rem;
    border-radius: 16px;
    margin-bottom: 3rem;
  }

  .summary-box h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: white;
    margin-bottom: 1.5rem;
  }

  .summary-box ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .summary-box li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: rgba(255,255,255,0.95);
  }

  .summary-box li::before {
    content: "âœ“";
    width: 24px;
    height: 24px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    flex-shrink: 0;
  }

  /* Contact Section */
  .contact-section {
    text-align: center;
    background: white;
    padding: 3rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
  }

  .contact-section h3 {
    font-family: var(--font-display);
    font-size: 1.75rem;
    color: var(--color-eucalyptus);
    margin-bottom: 0.75rem;
  }

  .contact-section p {
    color: #666;
    margin-bottom: 1.5rem;
  }

  .contact-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
  }

  .btn-primary {
    background: var(--color-sage);
    color: #1a1a1a;
  }

  .btn-primary:hover {
    background: #9dbc9a;
    transform: translateX(2px);
    box-shadow: 0 4px 14px rgba(139, 168, 136, 0.35);
  }

  .btn-secondary {
    background: rgba(139, 168, 136, 0.15);
    color: var(--color-eucalyptus);
  }

  .btn-secondary:hover {
    background: rgba(139, 168, 136, 0.25);
    transform: translateX(2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: 60px 0 60px;
    }

    .notice-card {
      flex-direction: column;
      text-align: center;
    }

    .disclaimer-grid {
      grid-template-columns: 1fr;
    }

    .disclaimer-card.full-width {
      grid-column: span 1;
    }

    .summary-box ul {
      grid-template-columns: 1fr;
    }

    .contact-section {
      padding: 2rem;
    }

    .contact-buttons {
      flex-direction: column;
    }
  }
</style>
