---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "Terms & Conditions", "item": "https://mullawaysmedicalcannabis.com.au/terms-and-conditions/" }
  ]
};
---

<Layout title="Terms and Conditions | Mullaways Medical Cannabis Australia" description="Terms and conditions for Mullaways Medical Cannabis. Rules governing your use of our website and purchase of cannabis products in Australia." schema={breadcrumbSchema}>
  <Header />
  <main>
    <Breadcrumb items={[{label: 'Home', href: '/'}, {label: 'Terms & Conditions'}]} />
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <div class="abstract-shape shape-1"></div>
        <div class="abstract-shape shape-2"></div>
        <div class="dot-pattern"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <span class="hero-badge">Legal</span>
          <h1>Terms and Conditions</h1>
          <p>The rules governing your use of our website and services.</p>
          <p class="last-updated">Last updated: February 2026</p>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="content-section">
      <div class="container">
        <div class="content-wrapper">
          <aside class="table-of-contents">
            <h3>Contents</h3>
            <nav>
              <a href="#agreement">Agreement to Terms</a>
              <a href="#eligibility">Eligibility</a>
              <a href="#account">Account Registration</a>
              <a href="#products">Products & Pricing</a>
              <a href="#orders">Orders & Payment</a>
              <a href="#shipping">Shipping & Delivery</a>
              <a href="#returns">Returns & Refunds</a>
              <a href="#prohibited">Prohibited Uses</a>
              <a href="#intellectual">Intellectual Property</a>
              <a href="#disclaimer">Disclaimer</a>
              <a href="#limitation">Limitation of Liability</a>
              <a href="#indemnification">Indemnification</a>
              <a href="#governing">Governing Law</a>
              <a href="#changes">Changes to Terms</a>
              <a href="#contact">Contact Us</a>
            </nav>
          </aside>

          <article class="policy-content">
            <section id="agreement" class="policy-section">
              <h2>Agreement to Terms</h2>
              <p>
                These Terms and Conditions ("Terms") constitute a legally binding agreement between you and Mullaways Medical Cannabis ("we", "our", "us", or the "Company") concerning your access to and use of our website and the purchase of products from our online store.
              </p>
              <p>
                By accessing our website, creating an account, or making a purchase, you acknowledge that you have read, understood, and agree to be bound by these Terms. If you do not agree with any part of these Terms, you must not use our website or purchase our products.
              </p>
              <div class="highlight-box">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="12" y1="8" x2="12" y2="12"/>
                  <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
                <p><strong>Important:</strong> These Terms include important provisions regarding age restrictions, legal compliance, dispute resolution, and limitations of liability. Please read them carefully.</p>
              </div>
            </section>

            <section id="eligibility" class="policy-section">
              <h2>Eligibility</h2>
              <p>To use our website and purchase products, you must:</p>
              <ul class="styled-list">
                <li>Be at least 18 years of age</li>
                <li>Be a resident of Australia with a valid Australian delivery address</li>
                <li>Have the legal capacity to enter into binding contracts</li>
                <li>Not be prohibited from purchasing or consuming cannabis products under applicable laws</li>
              </ul>
              <p>
                By using our website and making purchases, you represent and warrant that you meet all eligibility requirements. We reserve the right to verify your age and identity at any time and to refuse service to anyone who does not meet these requirements.
              </p>
            </section>

            <section id="account" class="policy-section">
              <h2>Account Registration</h2>
              <p>
                When you create an account with us, you must provide accurate, complete, and current information. You are responsible for:
              </p>
              <ul class="styled-list">
                <li>Maintaining the confidentiality of your account credentials</li>
                <li>All activities that occur under your account</li>
                <li>Notifying us immediately of any unauthorized access or use of your account</li>
                <li>Ensuring your account information remains accurate and up to date</li>
              </ul>
              <p>
                We reserve the right to suspend or terminate your account at our discretion if we suspect fraudulent activity, breach of these Terms, or for any other reason.
              </p>
            </section>

            <section id="products" class="policy-section">
              <h2>Products & Pricing</h2>
              
              <div class="info-card">
                <h3>Product Descriptions</h3>
                <p>
                  We make every effort to display product information accurately. However, we do not guarantee that product descriptions, images, or other content are accurate, complete, or error-free. Product effects and experiences may vary between individuals.
                </p>
              </div>

              <div class="info-card">
                <h3>Pricing</h3>
                <p>
                  All prices are displayed in Australian Dollars (AUD) and are subject to change without notice. Prices do not include shipping costs unless otherwise stated. We reserve the right to correct any pricing errors and to cancel orders placed at incorrect prices.
                </p>
              </div>

              <div class="info-card">
                <h3>Availability</h3>
                <p>
                  Product availability is subject to change. We reserve the right to discontinue products at any time. If a product becomes unavailable after you place an order, we will notify you and offer a refund or alternative product.
                </p>
              </div>
            </section>

            <section id="orders" class="policy-section">
              <h2>Orders & Payment</h2>
              <p>
                When you place an order, you are making an offer to purchase products subject to these Terms. We reserve the right to accept or reject any order at our discretion.
              </p>
              
              <h3>Order Acceptance</h3>
              <p>
                An order is not accepted until we send you an order confirmation email. We may refuse any order for reasons including but not limited to:
              </p>
              <ul class="styled-list">
                <li>Product unavailability</li>
                <li>Errors in product or pricing information</li>
                <li>Suspected fraudulent activity</li>
                <li>Inability to verify your identity or age</li>
                <li>Delivery restrictions to your location</li>
              </ul>

              <h3>Payment Methods</h3>
              <p>
                We accept the following payment methods:
              </p>
              <ul class="styled-list">
                <li>Bitcoin and other cryptocurrencies (processed instantly)</li>
                <li>Bank transfer (order processed upon confirmation of funds)</li>
              </ul>
              <p>
                Payment must be received in full before your order is dispatched. Orders paid via bank transfer may take 1-2 business days to process.
              </p>
            </section>

            <section id="shipping" class="policy-section">
              <h2>Shipping & Delivery</h2>
              <p>
                Please refer to our <a href="/shipping-and-delivery">Shipping & Delivery</a> page for detailed information about shipping options, delivery timeframes, and related policies.
              </p>
              <p>Key points include:</p>
              <ul class="styled-list">
                <li>We ship to physical addresses within Australia only (no PO Boxes)</li>
                <li>Signature is required upon delivery</li>
                <li>Risk of loss passes to you upon delivery</li>
                <li>We are not responsible for delays caused by shipping carriers or customs</li>
              </ul>
            </section>

            <section id="returns" class="policy-section">
              <h2>Returns & Refunds</h2>
              <p>
                Please refer to our <a href="/refunds">Refunds & Returns</a> page for detailed information about our return policy, eligibility criteria, and refund process.
              </p>
              <p>Key points include:</p>
              <ul class="styled-list">
                <li>Unopened products may be returned within 14 days of delivery</li>
                <li>Opened or used products are not eligible for return (except for quality issues)</li>
                <li>Damaged or defective products will be replaced or refunded</li>
                <li>Refunds are processed to the original payment method</li>
              </ul>
            </section>

            <section id="prohibited" class="policy-section">
              <h2>Prohibited Uses</h2>
              <p>
                You agree not to use our website or services for any unlawful purpose or in any way that violates these Terms. Prohibited activities include:
              </p>
              <ul class="styled-list">
                <li>Purchasing products for resale or commercial purposes without authorization</li>
                <li>Providing false information about your age, identity, or eligibility</li>
                <li>Attempting to circumvent security measures or access restricted areas</li>
                <li>Using automated systems (bots, scrapers) to access our website</li>
                <li>Interfering with the proper functioning of our website</li>
                <li>Harassing, threatening, or abusing our staff or other customers</li>
                <li>Engaging in fraudulent transactions or payment disputes</li>
                <li>Violating any applicable laws or regulations</li>
              </ul>
            </section>

            <section id="intellectual" class="policy-section">
              <h2>Intellectual Property</h2>
              <p>
                All content on our website, including but not limited to text, graphics, logos, images, product descriptions, and software, is the property of Mullaways Medical Cannabis or its content suppliers and is protected by Australian and international intellectual property laws.
              </p>
              <p>
                You may not reproduce, distribute, modify, create derivative works from, publicly display, or otherwise use any content from our website without our prior written consent.
              </p>
            </section>

            <section id="disclaimer" class="policy-section">
              <h2>Disclaimer</h2>
              <div class="warning-box">
                <p>
                  OUR WEBSITE AND PRODUCTS ARE PROVIDED "AS IS" AND "AS AVAILABLE" WITHOUT WARRANTIES OF ANY KIND, EITHER EXPRESS OR IMPLIED. WE DISCLAIM ALL WARRANTIES, INCLUDING BUT NOT LIMITED TO IMPLIED WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE, AND NON-INFRINGEMENT.
                </p>
              </div>
              <p>
                We do not warrant that:
              </p>
              <ul class="styled-list">
                <li>Our website will be uninterrupted, secure, or error-free</li>
                <li>Results from using our products will meet your expectations</li>
                <li>Product information is accurate, complete, or current</li>
                <li>Any errors on our website will be corrected</li>
              </ul>
              <p>
                Cannabis products affect individuals differently. We make no claims about the therapeutic or medicinal effects of our products. Always consult with a healthcare professional before using cannabis products.
              </p>
            </section>

            <section id="limitation" class="policy-section">
              <h2>Limitation of Liability</h2>
              <p>
                TO THE MAXIMUM EXTENT PERMITTED BY LAW, MULLAWAYS MEDICAL CANNABIS AND ITS OFFICERS, DIRECTORS, EMPLOYEES, AND AGENTS SHALL NOT BE LIABLE FOR ANY INDIRECT, INCIDENTAL, SPECIAL, CONSEQUENTIAL, OR PUNITIVE DAMAGES ARISING OUT OF OR RELATED TO YOUR USE OF OUR WEBSITE OR PURCHASE OF OUR PRODUCTS.
              </p>
              <p>
                Our total liability for any claim arising out of these Terms or your use of our services shall not exceed the amount you paid for the specific product or service giving rise to the claim.
              </p>
            </section>

            <section id="indemnification" class="policy-section">
              <h2>Indemnification</h2>
              <p>
                You agree to indemnify, defend, and hold harmless Mullaways Medical Cannabis and its officers, directors, employees, and agents from and against any claims, damages, losses, liabilities, and expenses (including legal fees) arising out of:
              </p>
              <ul class="styled-list">
                <li>Your use of our website or products</li>
                <li>Your violation of these Terms</li>
                <li>Your violation of any rights of another party</li>
                <li>Your violation of any applicable laws or regulations</li>
              </ul>
            </section>

            <section id="governing" class="policy-section">
              <h2>Governing Law</h2>
              <p>
                These Terms shall be governed by and construed in accordance with the laws of New South Wales, Australia, without regard to its conflict of law provisions.
              </p>
              <p>
                Any disputes arising out of or related to these Terms shall be resolved exclusively in the courts of New South Wales, Australia, and you consent to the personal jurisdiction of such courts.
              </p>
            </section>

            <section id="changes" class="policy-section">
              <h2>Changes to Terms</h2>
              <p>
                We reserve the right to modify these Terms at any time. Changes will be effective immediately upon posting to our website. Your continued use of our website or services after any changes constitutes your acceptance of the new Terms.
              </p>
              <p>
                We encourage you to review these Terms periodically. Material changes will be notified via email or prominent notice on our website.
              </p>
            </section>

            <section id="contact" class="policy-section">
              <h2>Contact Us</h2>
              <p>
                If you have any questions about these Terms and Conditions, please contact us:
              </p>
              <div class="contact-card">
                <div class="contact-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg></span>
                  <div>
                    <strong>Email</strong>
                    <a href="mailto:hello@mullawaysmedicalcannabis.com.au">hello@mullawaysmedicalcannabis.com.au</a>
                  </div>
                </div>
                <div class="contact-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg></span>
                  <div>
                    <strong>Phone</strong>
                    <a href="tel:1800000000">1800 BOTANICAL</a>
                  </div>
                </div>
              </div>
            </section>
          </article>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero {
    position: relative;
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-charcoal) 0%, #1a1f16 100%);
    color: var(--color-white);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .abstract-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    background: var(--color-sage);
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    right: -100px;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -50px;
  }

  .dot-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, var(--color-sage) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.05;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }

  .hero-badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(163, 177, 138, 0.2);
    border: 1px solid rgba(163, 177, 138, 0.3);
    border-radius: 100px;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-sage);
    margin-bottom: var(--space-lg);
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: white;
  }

  .hero p {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-sm);
  }

  .last-updated {
    font-size: var(--text-sm) !important;
    color: rgba(255, 255, 255, 0.5) !important;
  }

  .content-section {
    padding: var(--space-4xl) 0;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: var(--space-4xl);
    align-items: start;
  }

  .table-of-contents {
    position: sticky;
    top: 100px;
    background: var(--color-cream);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-sand);
    max-height: calc(100vh - 150px);
    overflow-y: auto;
  }

  .table-of-contents h3 {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
  }

  .table-of-contents nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .table-of-contents a {
    color: var(--color-charcoal-light);
    text-decoration: none;
    font-size: var(--text-sm);
    padding: var(--space-xs) 0;
    transition: color 0.2s;
  }

  .table-of-contents a:hover {
    color: var(--color-forest);
  }

  .policy-content {
    max-width: 800px;
  }

  .policy-section {
    margin-bottom: var(--space-3xl);
    scroll-margin-top: 100px;
  }

  .policy-section h2 {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-charcoal);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-sage);
  }

  .policy-section h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-charcoal);
    margin: var(--space-xl) 0 var(--space-md);
  }

  .policy-section p {
    color: var(--color-charcoal-light);
    line-height: 1.8;
    margin-bottom: var(--space-md);
  }

  .policy-section a {
    color: var(--color-forest);
    text-decoration: none;
  }

  .policy-section a:hover {
    text-decoration: underline;
  }

  .styled-list {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0;
  }

  .styled-list li {
    position: relative;
    padding-left: var(--space-xl);
    margin-bottom: var(--space-md);
    color: var(--color-charcoal-light);
    line-height: 1.7;
  }

  .styled-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 10px;
    width: 8px;
    height: 8px;
    background: var(--color-sage);
    border-radius: 50%;
  }

  .highlight-box {
    display: flex;
    gap: var(--space-md);
    background: rgba(163, 177, 138, 0.1);
    border: 1px solid var(--color-sage);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin: var(--space-xl) 0;
  }

  .highlight-box svg {
    flex-shrink: 0;
    color: var(--color-forest);
  }

  .highlight-box p {
    margin: 0;
    font-size: var(--text-sm);
  }

  .info-card {
    background: var(--color-cream);
    border: 1px solid var(--color-sand);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin: var(--space-lg) 0;
  }

  .info-card h3 {
    font-size: var(--text-md);
    margin: 0 0 var(--space-sm);
  }

  .info-card p {
    margin: 0;
    font-size: var(--text-sm);
  }

  .warning-box {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin: var(--space-xl) 0;
  }

  .warning-box p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-charcoal);
    font-weight: 500;
  }

  .contact-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-top: var(--space-lg);
  }

  .contact-card .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: var(--color-cream);
    border-radius: var(--radius-lg);
  }

  .contact-card .icon {
    font-size: 1.5rem;
  }

  .contact-card strong {
    display: block;
    color: var(--color-charcoal);
    margin-bottom: var(--space-xs);
  }

  .contact-card a {
    color: var(--color-forest);
    text-decoration: none;
  }

  .contact-card a:hover {
    text-decoration: underline;
  }

  @media (max-width: 900px) {
    .content-wrapper {
      grid-template-columns: 1fr;
    }

    .table-of-contents {
      position: relative;
      top: 0;
      max-height: none;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: var(--space-2xl) 0;
    }

    .content-section {
      padding: var(--space-2xl) 0;
    }

    .policy-section h2 {
      font-size: var(--text-xl);
    }
  }
</style>
