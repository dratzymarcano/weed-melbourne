      <!-- Future of Cannabis in QLD -->
      <section id="future" class="mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">The Future of Cannabis Laws in Queensland</h2>
        <div class="prose prose-lg max-w-none">
