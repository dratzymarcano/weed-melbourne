---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const title = "Shipping & Delivery | Mullaways Medical Cannabis";
const description = "Fast, discreet cannabis delivery across Australia. Standard $9.95 (2-5 days), Express $19.95 (1-2 days). Vacuum sealed, tracked shipping.";

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "Shipping & Delivery", "item": "https://mullawaysmedicalcannabis.com.au/shipping-and-delivery/" }
  ]
};
---

<Layout title={title} description={description} schema={breadcrumbSchema}>
  <Header />
  <main>
    <Breadcrumb items={[{label: 'Home', href: '/'}, {label: 'Shipping & Delivery'}]} />
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <div class="abstract-shape shape-1"></div>
        <div class="abstract-shape shape-2"></div>
        <div class="dot-pattern"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <span class="hero-badge">Delivery</span>
          <h1>Shipping & Delivery</h1>
          <p>Fast, discreet cannabis delivery to your door anywhere in Australia.</p>
          <p class="last-updated">Last updated: February 2026</p>
        </div>
      </div>
    </section>

    <!-- Shipping Options Section -->
    <section class="section shipping-options">
      <div class="container">
        <h2 class="section-title">Delivery Options</h2>
        <p class="section-subtitle">Choose the shipping speed that works for you. All orders are dispatched from our facility in Mullaways, NSW.</p>
        
        <div class="options-grid">
          <div class="option-card">
            <div class="option-badge">Most Popular</div>
            <div class="option-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="1" y="3" width="15" height="13"/>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            </div>
            <h3>Standard Delivery</h3>
            <div class="price">$9.95</div>
            <div class="timeframe">2–5 business days</div>
            <ul class="features">
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Full tracking included
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Discreet vacuum-sealed packaging
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Signature on delivery
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Australia-wide coverage
              </li>
            </ul>
          </div>

          <div class="option-card featured">
            <div class="option-badge">Fastest</div>
            <div class="option-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
              </svg>
            </div>
            <h3>Express Delivery</h3>
            <div class="price">$19.95</div>
            <div class="timeframe">1–2 business days</div>
            <ul class="features">
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Priority processing & dispatch
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Real-time tracking updates
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Discreet vacuum-sealed packaging
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Signature on delivery
              </li>
              <li>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                Same-day dispatch (orders before 12pm)
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Delivery Times Section -->
    <section class="section delivery-times">
      <div class="container">
        <h2 class="section-title">Estimated Delivery Times by Location</h2>
        <p class="section-subtitle">Delivery times from our Mullaways, NSW facility. Times shown are for Standard Delivery.</p>
        
        <div class="times-grid">
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="6" width="7" height="16"/><rect x="9" y="2" width="7" height="20"/><rect x="16" y="8" width="7" height="14"/></svg></div>
            <h4>Sydney & NSW Metro</h4>
            <span class="days">1–3 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20A7 7 0 0 1 9.8 6.9C15.5 4.9 17 3.5 19 2c1 2 2 4.5 2 8 0 5.5-4.5 10-10 10Z"/><path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/></svg></div>
            <h4>Melbourne & VIC</h4>
            <span class="days">2–4 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg></div>
            <h4>Brisbane & QLD</h4>
            <span class="days">2–4 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 22V8l9-6 9 6v14"/><path d="M7 11v8"/><path d="M12 11v8"/><path d="M17 11v8"/><path d="M3 22h18"/><path d="M3 8h18"/></svg></div>
            <h4>Canberra & ACT</h4>
            <span class="days">2–4 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 22h8"/><path d="M12 11v11"/><path d="M20 3H4l2.5 8.3a6 6 0 0 0 11 0z"/></svg></div>
            <h4>Adelaide & SA</h4>
            <span class="days">3–5 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 10V2"/><path d="m4.93 10.93 1.41 1.41"/><path d="M2 18h2"/><path d="M20 18h2"/><path d="m19.07 10.93-1.41 1.41"/><path d="M22 22H2"/><path d="m8 6 4-4 4 4"/><path d="M16 18a4 4 0 0 0-8 0"/></svg></div>
            <h4>Perth & WA</h4>
            <span class="days">4–6 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg></div>
            <h4>Darwin & NT</h4>
            <span class="days">4–6 business days</span>
          </div>
          <div class="time-card">
            <div class="state-icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m8 3 4 8 5-5 5 15H2z"/><path d="m4.14 15.08 3.36-3.36"/></svg></div>
            <h4>Hobart & TAS</h4>
            <span class="days">3–5 business days</span>
          </div>
        </div>

        <div class="note-box">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="12" y1="16" x2="12" y2="12"/>
            <line x1="12" y1="8" x2="12.01" y2="8"/>
          </svg>
          <p><strong>Regional Areas:</strong> Delivery to rural and remote areas may take an additional 1–3 business days. You'll receive tracking updates throughout.</p>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="content-section">
      <div class="container">
        <div class="content-wrapper">
          <aside class="table-of-contents">
            <h3>Contents</h3>
            <nav>
              <a href="#discreet">Discreet Packaging</a>
              <a href="#tracking">Order Tracking</a>
              <a href="#dispatch">Dispatch Times</a>
              <a href="#delivery-issues">Delivery Issues</a>
              <a href="#address">Address Requirements</a>
              <a href="#restrictions">Shipping Restrictions</a>
              <a href="#faq">FAQ</a>
            </nav>
          </aside>

          <article class="policy-content">
            <section id="discreet" class="policy-section">
              <h2>Discreet Packaging</h2>
              <p>
                Your privacy is our priority. Every order is shipped in plain, unmarked packaging with no indication of the contents or sender identity on the outside.
              </p>
              <div class="feature-grid">
                <div class="feature-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22V12"/></svg></span>
                  <div>
                    <strong>Plain Packaging</strong>
                    <p>Generic boxes with no logos, product names, or identifying marks</p>
                  </div>
                </div>
                <div class="feature-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg></span>
                  <div>
                    <strong>Vacuum Sealed</strong>
                    <p>All products are vacuum sealed to ensure freshness and eliminate odours</p>
                  </div>
                </div>
                <div class="feature-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1"/></svg></span>
                  <div>
                    <strong>Generic Return Address</strong>
                    <p>Shipping labels show a neutral business name, not "Mullaways Medical Cannabis"</p>
                  </div>
                </div>
                <div class="feature-item">
                  <span class="icon"><svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg></span>
                  <div>
                    <strong>Tamper-Evident Seals</strong>
                    <p>Packages include tamper-evident seals for your security</p>
                  </div>
                </div>
              </div>
            </section>

            <section id="tracking" class="policy-section">
              <h2>Order Tracking</h2>
              <p>
                Every order includes full tracking so you always know where your package is.
              </p>
              <div class="tracking-steps">
                <div class="tracking-step">
                  <div class="step-dot"></div>
                  <div class="step-content">
                    <strong>Order Confirmed</strong>
                    <p>You'll receive an email confirmation with your order details</p>
                  </div>
                </div>
                <div class="tracking-step">
                  <div class="step-dot"></div>
                  <div class="step-content">
                    <strong>Dispatched</strong>
                    <p>Tracking number sent via email when your order ships</p>
                  </div>
                </div>
                <div class="tracking-step">
                  <div class="step-dot"></div>
                  <div class="step-content">
                    <strong>In Transit</strong>
                    <p>Track your package in real-time through our courier partners</p>
                  </div>
                </div>
                <div class="tracking-step">
                  <div class="step-dot active"></div>
                  <div class="step-content">
                    <strong>Delivered</strong>
                    <p>Signature required upon delivery for security</p>
                  </div>
                </div>
              </div>
            </section>

            <section id="dispatch" class="policy-section">
              <h2>Dispatch Times</h2>
              <p>
                We aim to dispatch orders as quickly as possible:
              </p>
              <div class="info-card">
                <div class="dispatch-row">
                  <span class="label">Standard Delivery orders</span>
                  <span class="value">Dispatched within 24–48 hours</span>
                </div>
                <div class="dispatch-row">
                  <span class="label">Express Delivery orders (before 12pm AEST)</span>
                  <span class="value">Same-day dispatch</span>
                </div>
                <div class="dispatch-row">
                  <span class="label">Express Delivery orders (after 12pm AEST)</span>
                  <span class="value">Next business day dispatch</span>
                </div>
                <div class="dispatch-row">
                  <span class="label">Weekend orders</span>
                  <span class="value">Dispatched Monday</span>
                </div>
              </div>
              <p class="note">
                <strong>Note:</strong> Dispatch times exclude weekends and public holidays. During peak periods, dispatch may take an additional 24 hours.
              </p>
            </section>

            <section id="delivery-issues" class="policy-section">
              <h2>Delivery Issues</h2>
              <p>
                If you experience any issues with your delivery, we're here to help.
              </p>
              
              <div class="issue-card">
                <h3>Package Not Arrived</h3>
                <p>
                  If your package hasn't arrived within the expected timeframe, first check your tracking information. If tracking shows "delivered" but you haven't received it, contact us within 48 hours.
                </p>
              </div>

              <div class="issue-card">
                <h3>Damaged Package</h3>
                <p>
                  If your package arrives damaged, take photos before opening and contact us immediately. We'll arrange a replacement or refund. See our <a href="/refunds/">Refunds Policy</a> for details.
                </p>
              </div>

              <div class="issue-card">
                <h3>Incorrect Address</h3>
                <p>
                  Please double-check your delivery address before placing your order. If you need to change your address after ordering, contact us immediately. Address changes may not be possible once the order is dispatched.
                </p>
              </div>

              <div class="issue-card">
                <h3>Failed Delivery Attempt</h3>
                <p>
                  If you're not home to sign for your delivery, the courier will leave a card with instructions to reschedule or collect from a nearby pickup point.
                </p>
              </div>
            </section>

            <section id="address" class="policy-section">
              <h2>Address Requirements</h2>
              <p>
                To ensure successful delivery, please provide:
              </p>
              <ul class="styled-list">
                <li>Complete street address (no PO Boxes)</li>
                <li>Unit or apartment number (if applicable)</li>
                <li>Suburb and postcode</li>
                <li>State</li>
                <li>Contact email address (for delivery notifications)</li>
              </ul>
              <div class="warning-box">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                  <line x1="12" y1="9" x2="12" y2="13"/>
                  <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
                <p><strong>Important:</strong> We cannot ship to PO Boxes. A physical street address is required for all deliveries as signature is required upon receipt.</p>
              </div>
            </section>

            <section id="restrictions" class="policy-section">
              <h2>Shipping Restrictions</h2>
              <p>
                We currently only ship within Australia. We cannot ship to:
              </p>
              <ul class="styled-list">
                <li>International addresses</li>
                <li>PO Boxes or parcel lockers</li>
                <li>Business addresses that cannot accept signature-required packages</li>
                <li>Remote locations not serviced by our courier partners</li>
              </ul>
              <p>
                If you're unsure whether we can deliver to your location, please <a href="/contact/">contact us</a> before placing your order.
              </p>
            </section>

            <section id="faq" class="policy-section">
              <h2>Frequently Asked Questions</h2>
              
              <div class="faq-list">
                <div class="faq-item">
                  <h3>Can I change my delivery address after ordering?</h3>
                  <p>Contact us immediately after placing your order. We can update the address if the order hasn't been dispatched yet. Once dispatched, address changes are not possible.</p>
                </div>

                <div class="faq-item">
                  <h3>Do you offer free shipping?</h3>
                  <p>We occasionally offer free shipping promotions for orders over a certain value. Check our homepage for current offers.</p>
                </div>

                <div class="faq-item">
                  <h3>Can someone else sign for my package?</h3>
                  <p>Yes, anyone at the delivery address who is 18 or older can sign for the package. They will need to show ID to verify their age.</p>
                </div>

                <div class="faq-item">
                  <h3>What if I'm not home for delivery?</h3>
                  <p>The courier will leave a card with instructions. You can reschedule delivery or collect from a nearby pickup point (usually a post office or parcel locker).</p>
                </div>

                <div class="faq-item">
                  <h3>How is my package labelled?</h3>
                  <p>All packages use plain, unmarked packaging with a generic business name on the return label. There's no indication of the contents.</p>
                </div>
              </div>
            </section>
          </article>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero {
    position: relative;
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, var(--color-charcoal) 0%, #1a1f16 100%);
    color: var(--color-white);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .abstract-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    background: var(--color-sage);
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    right: -100px;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -50px;
  }

  .dot-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, var(--color-sage) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.05;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }

  .hero-badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(163, 177, 138, 0.2);
    border: 1px solid rgba(163, 177, 138, 0.3);
    border-radius: 100px;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-sage);
    margin-bottom: var(--space-lg);
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-md);
    color: white;
  }

  .hero p {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-sm);
  }

  .last-updated {
    font-size: var(--text-sm) !important;
    color: rgba(255, 255, 255, 0.5) !important;
  }

  .section {
    padding: var(--space-4xl) 0;
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-charcoal);
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-charcoal-light);
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
  }

  .shipping-options {
    background: var(--color-cream);
  }

  .options-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .option-card {
    position: relative;
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    border: 1px solid var(--color-sand);
    text-align: center;
  }

  .option-card.featured {
    border: 2px solid var(--color-forest);
    box-shadow: 0 10px 40px rgba(88, 129, 87, 0.15);
  }

  .option-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    padding: var(--space-xs) var(--space-md);
    background: var(--color-sage);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .option-card.featured .option-badge {
