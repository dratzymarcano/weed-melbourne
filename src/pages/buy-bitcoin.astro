      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>',
      maxZoom: 18,
    }).addTo(map);

    // Track current markers
    let currentMarkers: any[] = [];

    function showCity(citySlug: string) {
      // Remove old markers
      currentMarkers.forEach(m => map.removeLayer(m));
      currentMarkers = [];

      // Get ATMs for this city
      const cityATMs = bitcoinATMs.filter(a => a.city === citySlug);

      // Add markers
      cityATMs.forEach(atm => {
        const marker = L.marker([atm.lat, atm.lng], { icon: btcIcon }).addTo(map);
        marker.bindPopup(`
          <div style="font-family:Inter,system-ui,sans-serif;min-width:200px;">
            <strong style="font-size:14px;color:#1C1C1C;">${atm.name}</strong>
            <p style="margin:6px 0 4px;font-size:12px;color:#555;">${atm.address}</p>
            <div style="display:flex;gap:12px;margin:8px 0;font-size:12px;">
              <span style="color:#2D5A4A;font-weight:600;">⏱ ${atm.hours}</span>
              <span style="color:#666;">${atm.operator}</span>
            </div>
            <a href="https://www.google.com/maps/dir/?api=1&destination=${atm.lat},${atm.lng}" target="_blank" rel="noopener noreferrer" style="display:inline-block;margin-top:4px;padding:6px 14px;background:#2D5A4A;color:#fff;border-radius:6px;font-size:12px;text-decoration:none;font-weight:600;">Get Directions</a>
          </div>
        `);
        currentMarkers.push(marker);
      });

      // Get city center from tab data
      const activeTab = document.querySelector(`.city-tab[data-city="${citySlug}"]`);
      if (activeTab) {
        const lat = parseFloat(activeTab.getAttribute('data-lat') || '-33.8688');
        const lng = parseFloat(activeTab.getAttribute('data-lng') || '151.2093');
        const zoom = parseInt(activeTab.getAttribute('data-zoom') || '12');
        map.setView([lat, lng], zoom);
      }
    }

    // Initial load: show Sydney
    showCity('sydney');

    // City tab switching
    const cityTabs = document.querySelectorAll('.city-tab');
    const cityBtns = document.querySelectorAll('.atm-city-btn');

    function switchCity(citySlug: string) {
      cityTabs.forEach(tab => {
        if (tab.getAttribute('data-city') === citySlug) {
          tab.classList.add('active');
        } else {
          tab.classList.remove('active');
        }
      });
      showCity(citySlug);
    }

    cityTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const city = tab.getAttribute('data-city');
        if (city) {
          switchCity(city);
          document.getElementById('atm-map')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });

    cityBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const city = btn.getAttribute('data-city');
        if (city) {
          switchCity(city);
          document.getElementById('atm-map')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });

    // Fix map sizing after layout settles
    setTimeout(() => map.invalidateSize(), 200);
  };
</script>
