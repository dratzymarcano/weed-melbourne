    founded: '2013',
    ease: 'Very Easy',
    easeScore: 5,
    fees: '1%',
    deposit: 'PayID, POLi, BPAY, Cash',
    speed: 'Instant',
    minBuy: '$10',
    austrac: true,
    bestFor: 'Absolute beginners',
    description: 'Australia\'s most beginner-friendly exchange. Sign up, deposit via PayID, and buy Bitcoin in under 5 minutes.',
