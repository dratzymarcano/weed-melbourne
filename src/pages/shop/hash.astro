  }

  .hero-shape-1 { width: 400px; height: 400px; top: -100px; right: -100px; }
  .hero-shape-2 { width: 300px; height: 300px; bottom: -50px; left: -50px; }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin: 0 auto;
  }

  .section-label-light { color: rgba(255, 255, 255, 0.8); }
