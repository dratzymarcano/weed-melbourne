    display: block;
    margin-bottom: 6px;
    color: #1a1a1a;
  }

  .product-description-body dt {
    font-weight: 600;
    margin-top: 12px;
  }

  .product-description-body dd {
    margin: 4px 0 0;
    color: #666;
  }

  .product-faq {
    margin-top: 32px;
  }

  .product-faq h3 {
    font-size: 1.3rem;
    margin-bottom: 16px;
    color: #1a1a1a;
  }

  .product-description-accordion {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .product-accordion-item {
    background: var(--color-white);
    border-radius: 16px;
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .product-accordion-item:hover {
