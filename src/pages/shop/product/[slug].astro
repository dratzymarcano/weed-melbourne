---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import { allProducts, getWeightVariants, getReviewCount, getReviewRating, getProductReviews, getProductDescriptionHook, getProductLongDescription, getProductFaqItems, getMinPrice } from '../../../data/products';
import type { Product, ProductReview } from '../../../data/products';

export function getStaticPaths() {
  return allProducts.map((product: Product) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props;
const weightVariants = getWeightVariants(product.category);
const reviewCount = getReviewCount(product.slug);
const reviewRating = getReviewRating(product.slug);
const reviewItems = getProductReviews(product.slug, reviewCount);
const faqItems = getProductFaqItems(product);

// Related products from same category
const relatedProducts = allProducts
  .filter((p: Product) => p.category === product.category && p.slug !== product.slug)
  .slice(0, 4);

// Generate proper meta title (under 60 chars ideally)
const categoryLabel = product.category === 'flower' ? 'Weed' : product.category.charAt(0).toUpperCase() + product.category.slice(1);
const title = `Buy ${product.name} Australia | ${product.type} ${categoryLabel} | Mullaways`;

// Generate meta description (160 chars max)
const baseDesc = `Buy ${product.name} online in Australia. ${product.type} ${categoryLabel.toLowerCase()} with ${product.thc} THC. ${product.effects.slice(0, 2).join(', ')} effects.`;
const description = baseDesc.length > 160 ? baseDesc.substring(0, 157) + '...' : baseDesc + ' Discreet delivery Australia-wide from Mullaways Medical Cannabis.'.substring(0, 160 - baseDesc.length);

// --- Structured Data: Product Schema ---
const minPrice = Math.round(product.basePrice * weightVariants[0].multiplier);
const maxPrice = Math.round(product.basePrice * weightVariants[weightVariants.length - 1].multiplier);

const productSchema: Record<string, any> = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": product.name,
  "description": product.description,
  "brand": {
    "@type": "Brand",
    "name": "Mullaways Medical Cannabis"
  },
  "sku": product.slug,
  "url": `https://mullawaysmedicalcannabis.com.au/shop/product/${product.slug}`,
  "image": product.image ? `https://mullawaysmedicalcannabis.com.au${product.image}` : "https://mullawaysmedicalcannabis.com.au/og-default.png",
  "category": categoryLabel,
  "offers": {
    "@type": "AggregateOffer",
    "lowPrice": minPrice,
    "highPrice": maxPrice,
    "priceCurrency": "AUD",
    "availability": "https://schema.org/InStock",
    "offerCount": weightVariants.length,
    "seller": {
      "@type": "Organization",
      "name": "Mullaways Medical Cannabis"
    }
  }
};

if (reviewCount > 0) {
  productSchema["aggregateRating"] = {
    "@type": "AggregateRating",
    "ratingValue": reviewRating.toFixed(1),
    "reviewCount": reviewCount,
    "bestRating": "5",
    "worstRating": "1"
  };
  productSchema["review"] = reviewItems.slice(0, 5).map((r: ProductReview) => ({
    "@type": "Review",
    "author": { "@type": "Person", "name": r.name },
    "datePublished": r.date,
    "reviewBody": r.body,
    "name": r.title,
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": r.rating.toFixed(1),
      "bestRating": "5",
      "worstRating": "1"
    }
  }));
}

// --- Structured Data: BreadcrumbList ---
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "Shop", "item": "https://mullawaysmedicalcannabis.com.au/shop" },
    { "@type": "ListItem", "position": 3, "name": categoryLabel, "item": `https://mullawaysmedicalcannabis.com.au/shop/${product.category}` },
    { "@type": "ListItem", "position": 4, "name": product.name, "item": `https://mullawaysmedicalcannabis.com.au/shop/product/${product.slug}` }
  ]
};

// --- Structured Data: FAQPage ---
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map((item) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};

const schemas = [productSchema, breadcrumbSchema, faqSchema];
---

<Layout title={title} description={description} schema={schemas} ogType="product" ogImage={product.image ? `https://mullawaysmedicalcannabis.com.au${product.image}` : undefined}>
  <Header />
  
  <main>
    <!-- Breadcrumb -->
    <Breadcrumb items={[{label: 'Home', href: '/'}, {label: 'Shop', href: '/shop'}, {label: product.category.charAt(0).toUpperCase() + product.category.slice(1), href: `/shop/${product.category}`}, {label: product.name}]} />

    <!-- Product Detail -->
    <section class="product-detail-section">
      <div class="container">
        <div class="product-detail-grid">
          <!-- Product Image -->
          <div class="product-image-area">
            <div class={`product-badge ${product.type.toLowerCase()}`}>{product.type}</div>
            <div class="product-main-image">
              {product.image ? (
                <img src={product.image} alt={`Buy ${product.name} Australia - ${product.type} Cannabis`} width="500" height="500" loading="eager" />
              ) : (
                <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.8">
                  <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2z"/>
                  <path d="M12 6c0 0-4 4-4 8s4 6 4 6 4-2 4-6-4-8-4-8z"/>
                  <path d="M12 6c0 0 4 4 4 8s-4 6-4 6"/>
                </svg>
              )}
            </div>
            <div class="product-badges">
              <span class="badge lab-tested">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                Lab Tested
              </span>
              <span class="badge aus-wide">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
                Australia-Wide Delivery
              </span>
            </div>
          </div>

          <!-- Product Info -->
          <div class="product-info-area">
            <div class="product-type-badge">{product.type}</div>
            <h1>{product.name}</h1>
            <div class="product-reviews">
              {reviewCount > 0 ? (
                <>
                  <span class="rating">★ {reviewRating.toFixed(1)}</span>
                  <span class="review-count">({reviewCount} reviews)</span>
                </>
              ) : (
                <span class="review-count">No reviews yet</span>
              )}
            </div>
            <p class="product-description">{getProductDescriptionHook(product)}</p>

            <div class="product-specs">
              <div class="spec">
                <span class="spec-label">THC</span>
                <span class="spec-value">{product.thc}</span>
              </div>
              {product.cbd && (
                <div class="spec">
                  <span class="spec-label">CBD</span>
                  <span class="spec-value">{product.cbd}</span>
                </div>
              )}
              <div class="spec">
                <span class="spec-label">Category</span>
                <span class="spec-value">{product.category.charAt(0).toUpperCase() + product.category.slice(1)}</span>
              </div>
            </div>

            <div class="effects-section">
              <h3>Effects</h3>
              <div class="effects-list">
                {product.effects.map((effect: string) => (
                  <span class="effect-tag">{effect}</span>
                ))}
              </div>
            </div>

            <div class="flavour-section">
              <h3>Flavour Profile</h3>
              <p>{product.flavour}</p>
            </div>

            <!-- Weight Selection -->
            <div class="weight-selection">
              <h3>Select {product.category === 'edibles' || product.category === 'vapes' || product.category === 'pre-rolls' ? 'Quantity' : 'Weight'}</h3>
              <div class="weight-options">
                {weightVariants.map((variant: { label: string; value: string; multiplier: number }, i: number) => (
                  <label class={`weight-option ${i === 0 ? 'selected' : ''}`}>
                    <input 
                      type="radio" 
                      name="weight" 
                      value={variant.value} 
                      data-multiplier={variant.multiplier}
                      checked={i === 0}
                    />
                    <span class="weight-label">{variant.label}</span>
                    <span class="weight-price">${Math.round(product.basePrice * variant.multiplier)}</span>
                  </label>
                ))}
              </div>
            </div>

            <!-- Add to Cart -->
            <div class="add-to-cart-section">
              <div class="price-display">
                <span class="current-price" id="current-price">${Math.round(product.basePrice * weightVariants[0].multiplier)}</span>
              </div>
              <button class="btn btn-primary btn-large add-to-cart-btn" id="add-to-cart-btn" data-name={product.name} data-base-price={product.basePrice}>
                Add to Cart
              </button>
            </div>

            <!-- Trust Signals -->
            <div class="trust-signals">
              <div class="trust-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                <span>Discreet Packaging</span>
              </div>
              <div class="trust-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
                <span>Express Shipping</span>
              </div>
              <div class="trust-item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span>Lab Verified</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Description & Reviews Tabs -->
        <div class="product-tabs">
          <div class="tab-header">
            <button class="tab-button is-active" data-tab="description">Product Description</button>
            <button class="tab-button" data-tab="reviews">Reviews</button>
          </div>
          <div class="tab-panels">
            <div class="tab-panel is-active" data-panel="description">
              <div class="product-description-body" set:html={getProductLongDescription(product)} />

              <div class="product-faq">
                <h3>FAQ</h3>
                <div class="product-description-accordion">
                  {faqItems.map((item, index) => (
                    <div class={`product-accordion-item ${index === 0 ? 'is-open' : ''}`} data-index={index}>
                      <button class="product-accordion-question" aria-expanded={index === 0 ? 'true' : 'false'}>
                        <span class="product-accordion-title">{item.question}</span>
                        <span class="product-accordion-toggle">
                          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 5v14M5 12h14" />
                          </svg>
                        </span>
                      </button>
                      <div class="product-accordion-answer">
                        <div class="product-accordion-content">
                          <p>{item.answer}</p>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
            <div class="tab-panel" data-panel="reviews">
              <h2>Customer Reviews</h2>
              {reviewCount > 0 ? (
                <div class="review-summary">
                  <div class="review-score">★ {reviewRating.toFixed(1)}</div>
                  <div class="review-count">Based on {reviewCount} reviews</div>
                </div>
              ) : (
                <p class="review-empty">No reviews yet. Be the first to share your experience.</p>
              )}
              {reviewItems.length > 0 && (
                <>
                  <div class="review-list" data-page-size="5">
                    {reviewItems.map((review: ProductReview, index: number) => (
                      <article class="review-card" data-review-index={index}>
                      <div class="review-card-header">
                        <div>
                          <div class="review-card-title">{review.title}</div>
                          <div class="review-card-meta">
                            <span class="review-card-name">{review.name}</span>
                            <span class="review-card-location">{review.location}</span>
                          </div>
                        </div>
                        <div class="review-card-rating">★ {review.rating.toFixed(1)}</div>
                      </div>
                      <p class="review-card-body">{review.body}</p>
                      <div class="review-card-date">{review.date}</div>
                    </article>
                    ))}
                  </div>
                  <div class="review-pagination" data-review-pagination>
                    <button class="btn btn-ghost" data-review-prev>Previous</button>
                    <span class="review-page-status" data-review-status></span>
                    <button class="btn btn-ghost" data-review-next>Next</button>
                  </div>
                </>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Products -->
    {relatedProducts.length > 0 && (
      <section class="related-products-section">
        <div class="container">
          <h2>Related Products</h2>
          <div class="products-grid">
            {relatedProducts.map((related: Product) => {
              const relatedReviewCount = getReviewCount(related.slug);
              const relatedReviewRating = getReviewRating(related.slug);

              return (
              <a href={`/shop/product/${related.slug}`} class="product-card">
                <div class={`product-badge ${related.type.toLowerCase()}`}>{related.type}</div>
                <div class="product-image">
                  {related.image ? (
                    <img src={related.image} alt={`Buy ${related.name} Australia`} width="300" height="300" loading="lazy" />
                  ) : (
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                      <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2z"/>
                      <path d="M12 6c0 0-4 4-4 8s4 6 4 6 4-2 4-6-4-8-4-8z"/>
                      <path d="M12 6c0 0 4 4 4 8s-4 6-4 6"/>
                    </svg>
                  )}
                </div>
                <div class="product-content">
                  <h3>{related.name}</h3>
                  <div class="product-meta">
                    <span class="thc">THC: {related.thc}</span>
                  </div>
                  <div class="product-reviews">
                    {relatedReviewCount > 0 ? (
                      <>
                        <span class="rating">★ {relatedReviewRating.toFixed(1)}</span>
                        <span class="review-count">({relatedReviewCount} reviews)</span>
                      </>
                    ) : (
                      <span class="review-count">No reviews yet</span>
                    )}
                  </div>
                  <div class="product-footer">
                    <span class="price">From ${getMinPrice(related.basePrice, related.category)}</span>
                    <span class="view-link">View Details →</span>
                  </div>
                </div>
              </a>
            );
            })}
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener('click', (event) => {
    const target = event.target;
    if (!(target instanceof HTMLElement)) return;

    const tabButton = target.closest('.tab-button');
    if (!tabButton) return;

    const tabId = tabButton.getAttribute('data-tab');
    if (!tabId) return;

    const tabsRoot = tabButton.closest('.product-tabs');
    if (!tabsRoot) return;

    tabsRoot.querySelectorAll('.tab-button').forEach((button) => {
      button.classList.toggle('is-active', button === tabButton);
    });

    tabsRoot.querySelectorAll('.tab-panel').forEach((panel) => {
      panel.classList.toggle('is-active', panel.getAttribute('data-panel') === tabId);
    });
  });

  const accordionItems = document.querySelectorAll('.product-faq .product-accordion-item');
  accordionItems.forEach((item) => {
    const question = item.querySelector('.product-accordion-question');
    const answer = item.querySelector('.product-accordion-answer');
    if (!question || !answer) return;

    question.addEventListener('click', () => {
      const isOpen = item.classList.contains('is-open');

      accordionItems.forEach((otherItem) => {
        if (otherItem !== item) {
          otherItem.classList.remove('is-open');
          const otherQuestion = otherItem.querySelector('.product-accordion-question');
          if (otherQuestion) {
            otherQuestion.setAttribute('aria-expanded', 'false');
          }
        }
      });

      item.classList.toggle('is-open');
      question.setAttribute('aria-expanded', (!isOpen).toString());
    });
  });

  const reviewList = document.querySelector('.review-list');
  const pagination = document.querySelector('[data-review-pagination]');
  if (reviewList && pagination) {
    const pageSize = Number(reviewList.getAttribute('data-page-size')) || 5;
    const reviews = Array.from(reviewList.querySelectorAll('.review-card'));
    const totalPages = Math.max(1, Math.ceil(reviews.length / pageSize));
    let currentPage = 1;

    const prevButton = pagination.querySelector('[data-review-prev]');
    const nextButton = pagination.querySelector('[data-review-next]');
    const status = pagination.querySelector('[data-review-status]');

    const updatePagination = () => {
      const start = (currentPage - 1) * pageSize;
      const end = start + pageSize;
      reviews.forEach((review, index) => {
        review.classList.toggle('is-visible', index >= start && index < end);
      });
      if (status) {
        status.textContent = `Page ${currentPage} of ${totalPages}`;
      }
      if (prevButton) {
        prevButton.toggleAttribute('disabled', currentPage === 1);
      }
      if (nextButton) {
        nextButton.toggleAttribute('disabled', currentPage === totalPages);
      }
    };

    if (prevButton) {
      prevButton.addEventListener('click', () => {
        currentPage = Math.max(1, currentPage - 1);
        updatePagination();
      });
    }

    if (nextButton) {
      nextButton.addEventListener('click', () => {
        currentPage = Math.min(totalPages, currentPage + 1);
        updatePagination();
      });
    }

    updatePagination();
  }

</script>

<style>
  .effect-tag {
    background: transparent;
    border: 1px solid #ddd;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85rem;
    color: #555;
    transition: all 0.2s ease;
  }

  .effect-tag:hover {
    border-color: #2d5a3f;
    color: #2d5a3f;
  }

  .product-detail-section {
    padding: 40px 0 80px;
    background: white;
  }

  .product-detail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .product-image-area {
    position: sticky;
    top: 100px;
  }

