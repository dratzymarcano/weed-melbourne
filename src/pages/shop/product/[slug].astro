    padding-left: 0;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
    margin-top: 16px;
  }

  .product-description-body li {
    margin-bottom: 0;
    padding: 16px;
    border-radius: 14px;
    border: 1px solid var(--color-border);
    background: #faf8f5;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.04);
