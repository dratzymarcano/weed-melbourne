<script>
  // Weight selection handling
  document.querySelectorAll('.weight-option').forEach(option => {
    option.addEventListener('click', () => {
      // Update selected state
      document.querySelectorAll('.weight-option').forEach(opt => opt.classList.remove('selected'));
      option.classList.add('selected');
      
      // Update price display
      const input = option.querySelector('input') as HTMLInputElement;
      const multiplier = parseFloat(input.dataset.multiplier || '1');
      const basePrice = parseFloat(document.getElementById('add-to-cart-btn')?.dataset.basePrice || '0');
      const newPrice = Math.round(basePrice * multiplier);
      
      const priceDisplay = document.getElementById('current-price');
      if (priceDisplay) {
        priceDisplay.textContent = `$${newPrice}`;
      }
    });
  });

  // Add to cart functionality
  document.getElementById('add-to-cart-btn')?.addEventListener('click', () => {
    const btn = document.getElementById('add-to-cart-btn') as HTMLButtonElement;
    const name = btn.dataset.name;
    const selectedOption = document.querySelector('.weight-option.selected input') as HTMLInputElement;
    const multiplier = parseFloat(selectedOption?.dataset.multiplier || '1');
    const basePrice = parseFloat(btn.dataset.basePrice || '0');
    const price = Math.round(basePrice * multiplier);
    const weight = selectedOption?.value || '';
    
    const cart = JSON.parse(localStorage.getItem('cart') || '[]');
    const productName = `${name} (${weight})`;
    const existingItem = cart.find((item: any) => item.name === productName);
    
    if (existingItem) {
      existingItem.quantity = (existingItem.quantity || 1) + 1;
    } else {
      cart.push({ name: productName, price, quantity: 1 });
    }
    
    localStorage.setItem('cart', JSON.stringify(cart));
    window.dispatchEvent(new CustomEvent('cartUpdated'));
    window.dispatchEvent(new CustomEvent('openCartModal'));
    
    const originalText = btn.textContent;
    btn.textContent = 'Added to Cart!';
    btn.style.background = '#10b981';
    setTimeout(() => {
      btn.textContent = originalText;
      btn.style.background = '';
    }, 2000);
  });
</script>
