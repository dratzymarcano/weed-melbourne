---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "How to Buy Weed Online Australia | 4-Step Process";
const description = "How to buy weed online discreetly in Australia. Browse, cart, checkout, delivered. Plain packaging, no hassle. The easiest way to buy cannabis online.";

const steps = [
  {
    number: "01",
    title: "Browse Our Products",
    description: "Explore our comprehensive range of lab-tested cannabis products. Filter by category, cannabinoid content, or desired effects.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="11" cy="11" r="8"/><path d="M21 21l-4.35-4.35"/></svg>`,
    details: [
      "View detailed product information",
      "Check THC/CBD content and lab results",
      "Read reviews from other customers",
      "Compare products side by side"
    ]
  },
  {
    number: "02",
    title: "Add to Cart",
    description: "Select your products and add them to your cart. Adjust quantities and review your order before proceeding.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>`,
    details: [
      "Add items to your shopping cart",
      "Apply any discount codes",
      "Review your order summary",
      "Proceed when ready to checkout"
    ]
  },
  {
    number: "03",
    title: "Secure Checkout",
    description: "Complete your purchase with our secure checkout. We accept all major payment methods and keep your data safe.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>`,
    details: [
      "Enter shipping details",
      "Choose payment method",
      "Confirm your order",
      "Receive confirmation email"
    ]
  },
  {
    number: "04",
    title: "Fast Delivery",
    description: "Your order is shipped in plain, unmarked packaging with full tracking. Most orders arrive within 2-5 business days anywhere in Australia.",
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="1" y="3" width="22" height="18" rx="2" ry="2"/><line x1="1" y1="9" x2="23" y2="9"/></svg>`,
    details: [
      "All packaging is plain and discreet",
      "Full tracking provided via email/SMS",
      "Signature required on delivery",
      "Express shipping Australia-wide"
    ]
  }
];

const requirements = [
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>`,
    title: "18 Years or Older",
    description: "You must be of legal age to purchase cannabis products"
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>`,
    title: "Australian Address",
    description: "We deliver Australia-wide to residential addresses"
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/></svg>`,
    title: "Valid Payment Method",
    description: "Credit card, debit card, or other accepted payment methods"
  }
];

const faqs = [
  {
    question: "How long does shipping take?",
    answer: "Most orders arrive within 2-5 business days. Express shipping is available for faster delivery."
  },
  {
    question: "Is my information secure?",
    answer: "Yes. We use encrypted connections and never share your personal information with third parties."
  },
  {
    question: "Can I modify my order?",
    answer: "You can modify or cancel your order before it ships. Contact us as soon as possible for changes."
  },
  {
    question: "What payment methods do you accept?",
    answer: "We accept all major credit cards, debit cards, and various other secure payment options."
  }
];

// HowTo Schema
const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Buy Weed Online in Australia",
  "description": "A simple 4-step guide to buying cannabis online with discreet delivery anywhere in Australia.",
  "step": steps.map((step, index) => ({
    "@type": "HowToStep",
    "position": index + 1,
    "name": step.title,
    "text": step.description,
    "itemListElement": step.details.map((detail) => ({
      "@type": "HowToDirection",
      "text": detail
    }))
  })),
  "totalTime": "PT10M"
};

// FAQ Schema for the how-it-works page FAQs
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "How It Works", "item": "https://mullawaysmedicalcannabis.com.au/how-it-works" }
  ]
};
---

<Layout title={title} description={description} schema={[howToSchema, faqSchema, breadcrumbSchema]}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="hero-bg">
        <div class="hero-shape hero-shape-1"></div>
        <div class="hero-shape hero-shape-2"></div>
        <div class="hero-dots"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <span class="section-label section-label-light">The Process</span>
          <h1>How It Works</h1>
          <p>Ordering cannabis from our store is simple, safe, and discreet. Follow these four steps to receive your products.</p>
        </div>
      </div>
    </section>

    <!-- Steps Section -->
    <section class="section steps-section">
      <div class="container">
        <div class="steps-timeline">
          {steps.map((step, index) => (
            <div class="step-card">
              <div class="step-indicator">
                <div class="step-number">{step.number}</div>
                {index < steps.length - 1 && <div class="step-line"></div>}
              </div>
              <div class="step-content">
                <div class="step-header">
                  <div class="step-icon" set:html={step.icon}></div>
                  <h2>{step.title}</h2>
                </div>
                <p class="step-description">{step.description}</p>
                <ul class="step-details">
                  {step.details.map(detail => (
                    <li>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      <span>{detail}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Requirements Section -->
    <section class="section requirements-section">
      <div class="container">
        <div class="requirements-grid">
          <div class="requirements-content">
            <span class="section-label">Requirements</span>
            <h2>What You'll Need</h2>
            <p>To purchase from our dispensary, you'll need the following documentation and eligibility criteria.</p>
            
            <a href="/faq" class="btn btn-outline">View All FAQs</a>
          </div>

          <div class="requirements-cards">
            {requirements.map((req, i) => (
              <div class="requirement-card" style={`--delay: ${i * 0.1}s`}>
                <div class="req-icon" set:html={req.icon}></div>
                <div class="req-content">
                  <h3>{req.title}</h3>
                  <p>{req.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Preview Section -->
    <section class="section faq-section">
      <div class="container">
        <div class="section-intro">
          <span class="section-label">Common Questions</span>
          <h2>Quick Answers</h2>
        </div>

        <div class="faq-grid">
          {faqs.map((faq, i) => (
            <div class="faq-card" style={`--delay: ${i * 0.1}s`}>
              <h3>{faq.question}</h3>
              <p>{faq.answer}</p>
            </div>
          ))}
        </div>

        <div class="faq-cta">
          <a href="/faq" class="btn btn-ghost">
            View All FAQs
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-card">
          <div class="cta-pattern"></div>
          <div class="cta-content">
            <h2>Ready to Get Started?</h2>
            <p>Browse our range of lab-tested cannabis products and begin your wellness journey.</p>
            <div class="cta-buttons">
              <a href="/shop" class="btn btn-primary btn-large">Browse Products</a>
              <a href="/faq" class="btn btn-outline-light btn-large">Have Questions?</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* ========== Page Hero ========== */
  .page-hero {
    position: relative;
    padding: calc(var(--header-height) + var(--space-4xl)) 0 var(--space-4xl);
    background: linear-gradient(165deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
  }

  .hero-shape {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.03);
  }

  .hero-shape-1 {
    width: 400px;
    height: 400px;
    top: -150px;
    right: -100px;
  }

  .hero-shape-2 {
    width: 300px;
    height: 300px;
    bottom: -100px;
    left: -50px;
  }

  .hero-dots {
    position: absolute;
    bottom: 20%;
    right: 15%;
    width: 100px;
    height: 100px;
    background-image: radial-gradient(rgba(255, 255, 255, 0.15) 1.5px, transparent 1.5px);
    background-size: 12px 12px;
  }

  .hero-content {
    max-width: 640px;
    text-align: center;
    margin: 0 auto;
  }

  .section-label-light {
    color: var(--color-terracotta-light);
  }

  .section-label-light::before {
    background: var(--color-terracotta-light);
  }

  .page-hero h1 {
    color: var(--color-white);
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    margin-bottom: var(--space-lg);
  }

  .page-hero p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
  }

  /* ========== Steps Section ========== */
  .steps-section {
    background: var(--color-bg);
  }

  .steps-timeline {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .step-card {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: var(--space-xl);
    position: relative;
  }

  .step-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: var(--color-white);
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    border-radius: 50%;
    position: relative;
    z-index: 2;
  }

  .step-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(180deg, var(--color-primary) 0%, var(--color-sage) 100%);
    margin: var(--space-sm) 0;
  }

  .step-content {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin-bottom: var(--space-xl);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .step-content:hover {
    box-shadow: var(--shadow-lg);
    transform: translateX(8px);
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .step-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(45, 90, 74, 0.08);
    border-radius: var(--radius-md);
    color: var(--color-primary);
  }

  .step-content h2 {
    font-size: 1.35rem;
    margin: 0;
  }

  .step-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-light);
    margin-bottom: var(--space-lg);
  }

  .step-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .step-details li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.95rem;
    color: var(--color-text-light);
  }

  .step-details li svg {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  /* ========== Requirements Section ========== */
  .requirements-section {
    background: var(--color-white);
  }

  .requirements-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-4xl);
    align-items: flex-start;
  }

  .requirements-content h2 {
    margin-bottom: var(--space-md);
  }

  .requirements-content > p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: var(--space-xl);
  }

  .requirements-cards {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .requirement-card {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: var(--color-bg);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .requirement-card:hover {
    background: var(--color-white);
    box-shadow: var(--shadow-md);
    transform: translateY(-4px);
  }

  .req-icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: var(--radius-md);
    color: var(--color-primary);
  }

  .requirement-card:hover .req-icon {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .req-content h3 {
    font-size: 1.1rem;
    margin-bottom: var(--space-xs);
  }

  .req-content p {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* ========== FAQ Section ========== */
  .faq-section {
    background: var(--color-bg);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .faq-card {
    background: var(--color-white);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .faq-card:hover {
    box-shadow: var(--shadow-md);
  }

  .faq-card h3 {
    font-size: 1.05rem;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }

  .faq-card p {
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin: 0;
  }

  .faq-cta {
    text-align: center;
  }

  /* ========== CTA Section ========== */
  .cta-section {
    background: var(--color-bg);
    padding-bottom: var(--space-4xl);
  }

  .cta-card {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-radius: var(--radius-xl);
    padding: var(--space-4xl);
    overflow: hidden;
    text-align: center;
  }

  .cta-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    color: var(--color-white);
    margin-bottom: var(--space-md);
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.1rem;
    margin-bottom: var(--space-xl);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* ========== Responsive ========== */
  @media (max-width: 1024px) {
    .requirements-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: calc(var(--header-height) + var(--space-2xl)) 0 var(--space-2xl);
    }

    .step-card {
      grid-template-columns: 60px 1fr;
      gap: var(--space-md);
    }

    .step-number {
      width: 48px;
      height: 48px;
      font-size: 1rem;
    }

    .step-content {
      padding: var(--space-lg);
    }

    .step-content:hover {
      transform: none;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }

    .cta-card {
      padding: var(--space-2xl);
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
