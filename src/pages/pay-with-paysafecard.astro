---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const title = "Pay with Paysafecard Australia | Buy Cannabis with Paysafecard | Mullaways";
const description = "Learn how to pay for cannabis with Paysafecard in Australia. Buy a prepaid voucher with cash, enter your 16-digit PIN at checkout — no bank account needed. Anonymous, fast, and secure.";

const schema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Pay with Paysafecard in Australia",
  "description": "A step-by-step guide to buying cannabis online using Paysafecard prepaid vouchers.",
  "step": [
    {
      "@type": "HowToStep",
      "name": "Buy a Paysafecard Voucher",
      "text": "Purchase a Paysafecard voucher with cash at any participating retailer — newsagents, petrol stations, and convenience stores across Australia."
    },
    {
      "@type": "HowToStep",
      "name": "Get Your 16-Digit PIN",
      "text": "You'll receive a receipt or card with a unique 16-digit PIN code. Keep this safe — it's your payment code."
    },
    {
      "@type": "HowToStep",
      "name": "Select Paysafecard at Checkout",
      "text": "Add your products to cart, proceed to checkout, and select Paysafecard as your payment method."
    },
    {
      "@type": "HowToStep",
      "name": "Enter Your PIN & Pay",
      "text": "Enter your 16-digit Paysafecard PIN and confirm your payment. Your order is processed immediately."
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://mullawaysmedicalcannabis.com.au/" },
    { "@type": "ListItem", "position": 2, "name": "Pay with Paysafecard", "item": "https://mullawaysmedicalcannabis.com.au/pay-with-paysafecard" }
  ]
};

const retailers = [
  { name: 'Newsagents & Newspower', icon: 'newspaper', locations: '2,000+', note: 'Most suburban newsagencies carry Paysafecard' },
  { name: 'BP & Caltex Stations', icon: 'fuel', locations: '1,500+', note: 'Available at the counter in most petrol stations' },
  { name: 'Australia Post', icon: 'mail', locations: '4,300+', note: 'Available at selected Australia Post outlets nationwide' },
  { name: '7-Eleven', icon: 'store', locations: '700+', note: 'Ask for Paysafecard at the counter' },
];

const faqs = [
  {
    q: 'What is Paysafecard?',
    a: 'Paysafecard is a prepaid payment method that lets you pay online using a 16-digit PIN code. You buy the voucher with cash at retail stores, then use the PIN to make payments. No bank account, credit card, or personal details required.'
  },
  {
    q: 'Where can I buy a Paysafecard in Australia?',
    a: 'Paysafecard vouchers are available at thousands of retail locations across Australia including newsagents, petrol stations (BP, Caltex), 7-Eleven stores, and selected Australia Post outlets. Use the Paysafecard store locator to find your nearest retailer.'
  },
  {
    q: 'What denominations are available?',
    a: 'Paysafecard vouchers in Australia are available in $10, $20, $30, $50 and $100 denominations. You can combine up to 10 PINs in a single transaction to pay larger amounts.'
  },
  {
    q: 'Is paying with Paysafecard anonymous?',
    a: 'Yes. Since you buy the voucher with cash at a physical store, there\'s no connection to your bank account or identity. The 16-digit PIN is the only thing needed for payment — no personal details are shared.'
  },
  {
    q: 'How long does Paysafecard payment take?',
    a: 'Paysafecard payments are processed instantly. As soon as you enter your valid 16-digit PIN at checkout, your payment is confirmed and your order begins processing immediately.'
  },
  {
    q: 'Can I get a refund on a Paysafecard payment?',
    a: 'Refunds for Paysafecard payments are issued as store credit or to your Paysafecard account (if you have one registered). Please see our refunds policy for full details.'
  },
  {
    q: 'What if my Paysafecard balance isn\'t enough?',
    a: 'You can combine multiple Paysafecard PINs to cover a larger purchase. At checkout, enter your first PIN, then add additional PINs until the full amount is covered.'
  },
  {
    q: 'Does Paysafecard charge fees?',
    a: 'There are no fees when purchasing or using a Paysafecard voucher. However, if a voucher is inactive for 12 months, a small maintenance fee may apply. Use your voucher promptly and there are zero fees.'
  },
];
---

<Layout title={title} description={description} schema={[schema, breadcrumbSchema]}>
  <Header />

  <Breadcrumb items={[{label: 'Home', href: '/'}, {label: 'Pay with Paysafecard'}]} />

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <div class="hero-gradient"></div>
      <div class="hero-pattern"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          <span>Cash-Based Payment</span>
        </div>
        <h1>Pay with Paysafecard <span class="text-gradient">in Australia</span></h1>
        <p class="hero-description">No bank account? No problem. Buy a prepaid Paysafecard voucher with cash at any newsagent or petrol station, then pay online with your 16-digit PIN. It's completely anonymous and takes seconds.</p>
        <div class="hero-stats">
          <div class="hero-stat">
            <span class="stat-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </span>
            <div>
              <span class="stat-value">Instant</span>
              <span class="stat-label">Payment Processing</span>
            </div>
          </div>
          <div class="hero-stat">
            <span class="stat-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            </span>
            <div>
              <span class="stat-value">100%</span>
              <span class="stat-label">Anonymous</span>
            </div>
          </div>
          <div class="hero-stat">
            <span class="stat-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </span>
            <div>
              <span class="stat-value">8,000+</span>
              <span class="stat-label">Retail Locations</span>
            </div>
          </div>
        </div>
        <div class="hero-ctas">
          <a href="#how-it-works" class="btn btn-primary btn-large">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="7" width="20" height="14" rx="2"/><path d="M16 3l-4 4-4-4"/></svg>
            How It Works
          </a>
          <a href="#where-to-buy" class="btn btn-outline-light btn-large">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            Where to Buy
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Paysafecard Section -->
  <section class="section why-paysafecard">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Why Pay With Paysafecard?</span>
        <h2>Benefits of Paysafecard Payments</h2>
        <p>Paysafecard is one of the easiest and most private ways to pay for cannabis online in Australia. Here's why customers love it.</p>
      </div>
      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
          </div>
          <h3>Completely Anonymous</h3>
          <p>Buy the voucher with cash — no ID, no bank account, no personal details. Your purchase stays completely private.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 1v22M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
          </div>
          <h3>No Bank Account Needed</h3>
          <p>Perfect if you don't have a bank account or prefer not to use it. Buy with cash and pay online — simple as that.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
          </div>
          <h3>Instant Payments</h3>
          <p>Enter your 16-digit PIN at checkout and your payment is confirmed immediately. No waiting for bank transfers or confirmations.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          </div>
          <h3>Safe & Secure</h3>
          <p>Paysafecard is used by millions worldwide. Your PIN is the only thing needed — no card numbers or sensitive data shared online.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section how-section" id="how-it-works">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Step-by-Step Guide</span>
        <h2>How to Pay with Paysafecard <span class="text-accent">(4 Easy Steps)</span></h2>
        <p>From buying the voucher to completing your order — the whole process takes just a few minutes.</p>
      </div>

      <div class="steps-container">
        <div class="step-card">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Buy a Paysafecard Voucher</h3>
            <p>Visit any participating retailer — newsagents, petrol stations, 7-Eleven, or Australia Post. Ask for a <strong>Paysafecard voucher</strong> in your desired amount ($10, $20, $30, $50, or $100).</p>
            <div class="step-tip">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
              <span>Use the <a href="https://www.paysafecard.com/en-au/find-sales-outlet/" target="_blank" rel="noopener noreferrer">Paysafecard Store Locator</a> to find your nearest retailer</span>
            </div>
          </div>
        </div>

        <div class="step-card">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Get Your 16-Digit PIN</h3>
            <p>After purchase, you'll receive a receipt with a <strong>unique 16-digit PIN code</strong>. This is your payment credential — keep it safe until checkout.</p>
            <div class="pin-visual">
              <div class="pin-display">
                <span class="pin-group">0149</span>
                <span class="pin-separator">-</span>
                <span class="pin-group">5832</span>
                <span class="pin-separator">-</span>
                <span class="pin-group">7461</span>
                <span class="pin-separator">-</span>
                <span class="pin-group">9203</span>
              </div>
              <span class="pin-label">Example 16-digit PIN</span>
            </div>
            <div class="step-tip">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
              <span>You can combine up to 10 PINs for larger orders</span>
            </div>
          </div>
        </div>

        <div class="step-card">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Add Products & Go to Checkout</h3>
            <p>Browse our <a href="/shop">shop</a>, add your products to cart, and proceed to <a href="/checkout">checkout</a>. Fill in your delivery details as usual.</p>
          </div>
        </div>

        <div class="step-card">
          <div class="step-number">4</div>
          <div class="step-content">
            <h3>Select Paysafecard & Enter Your PIN</h3>
            <p>In the payment method section, choose <strong>"Paysafecard"</strong>. Enter your 16-digit PIN code and confirm your payment. That's it!</p>
            <div class="step-tip success">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
              <span>Done! Your payment is confirmed instantly and we'll start processing your order right away.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Where to Buy Section -->
  <section class="section retailers-section" id="where-to-buy">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Where to Buy</span>
        <h2>Find Paysafecard <span class="text-accent">Near You</span></h2>
        <p>Paysafecard vouchers are available at thousands of retail locations across Australia. Here are the main retailers.</p>
      </div>

      <div class="retailers-grid">
        {retailers.map((retailer) => (
          <div class="retailer-card">
            <div class="retailer-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
            </div>
            <h3>{retailer.name}</h3>
            <span class="retailer-count">{retailer.locations} locations</span>
            <p>{retailer.note}</p>
          </div>
        ))}
      </div>

      <div class="locator-cta">
        <div class="locator-content">
          <h3>Find Your Nearest Retailer</h3>
          <p>Use the official Paysafecard store locator to find the closest place to buy your voucher.</p>
          <a href="https://www.paysafecard.com/en-au/find-sales-outlet/" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            Open Store Locator
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Denominations Section -->
  <section class="section denominations-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Available Amounts</span>
        <h2>Paysafecard Denominations</h2>
        <p>Choose the voucher amount that matches your order. You can combine multiple vouchers for larger purchases.</p>
      </div>

      <div class="denom-grid">
        <div class="denom-card">
          <span class="denom-amount">$10</span>
          <span class="denom-label">Starter</span>
        </div>
        <div class="denom-card">
          <span class="denom-amount">$20</span>
          <span class="denom-label">Small Order</span>
        </div>
        <div class="denom-card">
          <span class="denom-amount">$30</span>
          <span class="denom-label">Most Popular</span>
        </div>
        <div class="denom-card popular">
          <span class="denom-badge">Popular</span>
          <span class="denom-amount">$50</span>
          <span class="denom-label">Best Value</span>
        </div>
        <div class="denom-card">
          <span class="denom-amount">$100</span>
          <span class="denom-label">Larger Orders</span>
        </div>
      </div>

      <div class="denom-note">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
        <p>Need to pay more than $100? You can combine up to 10 Paysafecard PINs in a single checkout to cover larger orders.</p>
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="section tips-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Helpful Tips</span>
        <h2>Tips for Paysafecard Payments</h2>
      </div>
      <div class="tips-grid">
        <div class="tip-card">
          <div class="tip-number">01</div>
          <h3>Buy Exact Amount</h3>
          <p>Check your cart total before buying a voucher so you get the right denomination. Leftover balance stays on your PIN for next time.</p>
        </div>
        <div class="tip-card">
          <div class="tip-number">02</div>
          <h3>Keep Your Receipt</h3>
          <p>The receipt IS your payment. Don't throw it away until you've used the full balance. Treat it like cash.</p>
        </div>
        <div class="tip-card">
          <div class="tip-number">03</div>
          <h3>Use Within 12 Months</h3>
          <p>Paysafecard vouchers are valid indefinitely, but a small monthly fee applies after 12 months of inactivity. Use it promptly to avoid any charges.</p>
        </div>
        <div class="tip-card">
          <div class="tip-number">04</div>
          <h3>Check Your Balance</h3>
          <p>Visit <a href="https://www.paysafecard.com/en-au/check-balance/" target="_blank" rel="noopener noreferrer">paysafecard.com/check-balance</a> to see how much is left on your PIN at any time.</p>
        </div>
        <div class="tip-card">
          <div class="tip-number">05</div>
          <h3>Combine PINs</h3>
          <p>Need to pay more than one voucher's worth? Enter multiple PINs at checkout — you can stack up to 10 PINs per transaction.</p>
        </div>
        <div class="tip-card">
          <div class="tip-number">06</div>
          <h3>No Chargebacks</h3>
          <p>Unlike credit cards, Paysafecard payments are final. Double-check your order before confirming payment.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Payment Methods -->
  <section class="section other-payments">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Other Options</span>
        <h2>Other Payment Methods</h2>
        <p>Paysafecard not for you? We accept multiple payment methods to suit your preference.</p>
      </div>
      <div class="other-grid">
        <a href="/buy-bitcoin" class="other-card">
          <div class="other-icon bitcoin">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M9.5 7.5V9H8V11H9.5V16.5H11.5V11H13.5L14 9H11.5V7.8C11.5 7.36 11.72 7.15 12.22 7.15H14V5H12.22C10.24 5 9.5 6.06 9.5 7.5Z"/></svg>
          </div>
          <div>
            <h3>Bitcoin</h3>
            <p>Buy Bitcoin online or at ATMs. Fast, private, and low fees.</p>
          </div>
          <svg class="arrow" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/pay-with-bank-transfer" class="other-card">
          <div class="other-icon bank">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="10" width="18" height="11" rx="1"/><path d="M3 10l9-7 9 7"/><line x1="7" y1="14" x2="7" y2="17"/><line x1="12" y1="14" x2="12" y2="17"/><line x1="17" y1="14" x2="17" y2="17"/></svg>
          </div>
          <div>
            <h3>Bank Transfer</h3>
            <p>Direct bank transfer via PayID or BSB. Simple and no fees.</p>
          </div>
          <svg class="arrow" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section faq-section" id="faq">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Common Questions</span>
        <h2>Paysafecard FAQ</h2>
        <p>Everything you need to know about paying with Paysafecard.</p>
      </div>
      <div class="faq-container">
        {faqs.map((faq) => (
          <details class="faq-item">
            <summary class="faq-question">
              <span class="faq-q-text">{faq.q}</span>
              <span class="faq-toggle">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
              </span>
            </summary>
            <div class="faq-answer">
              <p>{faq.a}</p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-card">
        <div class="cta-content">
          <h2>Ready to Order?</h2>
          <p>Browse our lab-tested cannabis products and pay securely with Paysafecard at checkout — no bank account required.</p>
          <div class="cta-buttons">
            <a href="/shop" class="btn btn-primary btn-large">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
              Browse Products
            </a>
            <a href="/checkout" class="btn btn-outline">
              Go to Checkout
            </a>
          </div>
        </div>
        <div class="cta-decoration">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>
            <rect x="6" y="8" width="12" height="8" rx="1.5" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>
            <text x="12" y="14" text-anchor="middle" font-size="5" font-weight="bold" fill="currentColor" opacity="0.15">PSC</text>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Hero */
  .hero {
    position: relative;
    padding: var(--space-3xl) 0 var(--space-4xl);
    overflow: hidden;
    min-height: 550px;
    display: flex;
    align-items: center;
  }

  .hero h1 {
    color: white;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
